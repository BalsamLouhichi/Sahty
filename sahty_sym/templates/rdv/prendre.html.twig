<script>
document.addEventListener('DOMContentLoaded', function() {
    const medecinsData = {{ medecins|default([])|json_encode|raw }};
    const medecinsById = {};
    medecinsData.forEach(m => medecinsById[m.id] = m);

    const searchInput = document.getElementById('searchDoctor');
    const medecinSelect = document.getElementById('medecinSelect');
    const doctorDetailsCard = document.getElementById('doctorDetailsCard');
    const noResults = document.getElementById('noResults');
    const dateInput = document.getElementById('dateInput');
    const timeInput = document.getElementById('timeInput');
    const reasonInput = document.getElementById('reasonInput');
    const form = document.getElementById('rdvForm');
    const submitBtn = document.getElementById('submitBtn');
    const dateError = document.getElementById('dateError');
    const timeError = document.getElementById('timeError');

    /* === Date ‚â• aujourd'hui et week-end bloqu√©s === */
    const today = new Date();
    today.setHours(0,0,0,0);
    dateInput.min = today.toISOString().split('T')[0];

    dateInput.addEventListener('change', function() {
        const selectedDate = new Date(this.value);
        selectedDate.setHours(0,0,0,0);

        if(selectedDate < today) {
            dateError.textContent = 'La date doit √™tre √† partir d'aujourd'hui.';
            dateError.style.display = 'flex';
            this.value = '';
            return;
        }
        const day = selectedDate.getDay();
        if(day === 0 || day === 6){
            dateError.textContent = 'Les rendez-vous ne sont pas disponibles le week-end.';
            dateError.style.display = 'flex';
            this.value = '';
            return;
        }
        dateError.style.display = 'none';
        updateTimeline(2);
    });

    /* === Heure 09:00 ‚Üí 17:00 === */
    timeInput.addEventListener('change', function() {
        if(!this.value) return;
        const [h,m] = this.value.split(':').map(Number);
        if(h < 9 || h > 17 || (h === 17 && m > 0)){
            timeError.textContent = 'L'heure doit √™tre entre 09:00 et 17:00.';
            timeError.style.display = 'flex';
            this.value = '';
            return;
        }
        timeError.style.display = 'none';
        updateTimeline(3);
    });

    /* === Recherche m√©decin === */
    searchInput.addEventListener('input', function(){
        const term = this.value.toLowerCase().trim();
        let hasVisible = false;
        Array.from(medecinSelect.options).forEach(opt=>{
            if(opt.value === '' || opt.value === '0') return;
            const med = medecinsById[opt.value];
            if(!med){ opt.style.display='none'; return; }
            const text = `${med.nom || ''} ${med.prenom || ''} ${med.specialite || ''}`.toLowerCase();
            if(text.includes(term) || term === '') { 
                opt.style.display=''; 
                hasVisible=true; 
            }
            else { opt.style.display='none'; }
        });
        noResults.classList.toggle('show', !hasVisible && term!=='');
        if(!hasVisible) { 
            medecinSelect.value=''; 
            doctorDetailsCard.classList.remove('show'); 
        }
    });

    /* === Affichage d√©tails m√©decin === */
    medecinSelect.addEventListener('change', function(){
        const med = medecinsById[this.value];
        if(!med){ 
            doctorDetailsCard.classList.remove('show'); 
            return; 
        }
        document.getElementById('doctorName').textContent = `Dr. ${med.prenom || ''} ${med.nom || ''}`.trim();
        document.getElementById('doctorSpecialty').textContent = med.specialite || 'G√©n√©raliste';
        document.getElementById('doctorExperience').textContent = med.anneeExperience? `${med.anneeExperience} an${med.anneeExperience>1?'s':''}` : '-';
        document.getElementById('doctorGrade').textContent = med.grade || '-';
        document.getElementById('doctorEstablishment').textContent = med.nomEtablissement || '-';
        const initials = ((med.prenom||'').charAt(0) + (med.nom||'').charAt(0)).toUpperCase();
        document.getElementById('doctorAvatar').textContent = initials || 'üë®‚Äç‚öïÔ∏è';
        doctorDetailsCard.classList.add('show');
        updateTimeline(1);
    });

    /* === Motif === */
    reasonInput.addEventListener('input', function() {
        if(this.value.trim()) {
            updateTimeline(4);
        }
    });

    /* === Mise √† jour de la timeline === */
    function updateTimeline(step) {
        const steps = document.querySelectorAll('.timeline-step');
        steps.forEach((s, i) => {
            if(i < step) {
                s.classList.add('completed');
                s.classList.remove('active');
            } else if(i === step) {
                s.classList.add('active');
                s.classList.remove('completed');
            } else {
                s.classList.remove('active', 'completed');
            }
        });
    }

    /* === Validation finale formulaire === */
    form.addEventListener('submit', function(e){
        let hasError = false;
        
        if(!dateInput.value){ 
            dateError.textContent='Veuillez choisir une date valide.'; 
            dateError.style.display='flex'; 
            hasError=true; 
        }
        
        if(!timeInput.value){ 
            timeError.textContent='Veuillez choisir une heure valide.'; 
            timeError.style.display='flex'; 
            hasError=true; 
        }
        
        if(!medecinSelect.value || medecinSelect.value==='0'){ 
            alert('‚ö†Ô∏è Veuillez s√©lectionner un m√©decin'); 
            medecinSelect.focus(); 
            hasError=true; 
        }
        
        if(hasError){ 
            e.preventDefault(); 
            return false; 
        }
        
        submitBtn.innerHTML='<i class="fas fa-spinner fa-spin"></i> Traitement en cours...';
        submitBtn.disabled=true;
    });

    console.log('üè• MEDINOVA - Formulaire de rendez-vous charg√© avec succ√®s!');
    console.log('üé® Design harmonis√© avec le th√®me principal');
});
</script>
