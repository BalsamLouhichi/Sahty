        @media (max-width: 768px) {
            .rdv-section {
                padding: 20px 10px;
            }

            .header-content {
                flex-direction: column;
                align-items: stretch;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .header-title h1 {
