{% extends 'base.html.twig' %}

{% block title %}Mes Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center rounded-top-3">
                    <h3>Rendez-vous Confirmé</h3>
                    <p class="mb-0">Merci de votre confirmation !</p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Détails du Rendez-vous :</h5>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>Date :</strong> {{ rdv.date|date('d/m/Y H:i') }}</li>
                        <li class="list-group-item"><strong>Médecin :</strong> Dr. {{ rdv.medecin.nom }} {{ rdv.medecin.prenom }}</li>
                        <li class="list-group-item"><strong>Spécialité :</strong> {{ rdv.medecin.specialite }}</li>
                        <li class="list-group-item"><strong>Lieu :</strong> {{ rdv.lieu }}</li>
                        <li class="list-group-item"><strong>Status :</strong> <span class="badge bg-success">Confirmé</span></li>
                    </ul>

                    <p class="text-muted">Pour compléter votre dossier médical, merci de remplir votre fiche médicale avant votre consultation.</p>

                    <div class="d-grid gap-2">
                        <a href="{{ path('fiche_medicale_remplir', {'id': rdv.patient.id}) }}" class="btn btn-outline-primary btn-lg">
                            Remplir ma fiche médicale
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card {
        background-color: #ffffff;
    }
    .btn-outline-primary {
        color: #0d6efd;
        border-color: #0d6efd;
        transition: all 0.3s ease;
    }
    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }
</style>
{% endblock %}