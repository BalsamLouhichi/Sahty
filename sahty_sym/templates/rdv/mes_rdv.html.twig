{% block body %}
<div class="rdv-section">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-title">
                    <h1><i class="fas fa-calendar-check"></i> Mes Rendez-vous</h1>
                    <p>G√©rez vos consultations m√©dicales en toute simplicit√©</p>
                </div>
                <a href="{{ path('app_rdv_prendre') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle"></i> <span>Nouveau rendez-vous</span>
                </a>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for message in app.flashes('info') %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% if rendez_vous is not empty %}
            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card total">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>{{ rendez_vous|length }}</h3>
                    <p>Total RDV</p>
                </div>
                <div class="stat-card attente">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3>{{ rendez_vous|filter(r => r.statut == 'en attente')|length }}</h3>
                    <p>En attente</p>
                </div>
                <div class="stat-card confirme">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>{{ rendez_vous|filter(r => r.statut == 'Confirm√©')|length }}</h3>
                    <p>Confirm√©s</p>
                </div>
                <div class="stat-card annule">
                    <div class="stat-icon">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <h3>{{ rendez_vous|filter(r => r.statut == 'Annul√©')|length }}</h3>
                    <p>Annul√©s</p>
                </div>
            </div>

            <!-- RDV Cards Grid -->
            <div class="rdv-grid">
                {% for rdv in rendez_vous %}
                    <div class="rdv-card {% if rdv.statut == 'Annul√©' %}rdv-annule{% endif %}">
                        <div class="rdv-header">
                            <div class="rdv-date-time">
                                <div class="rdv-date">
                                    <i class="fas fa-calendar"></i>
                                    {{ rdv.dateRdv|date('d/m/Y') }}
                                </div>
                                <div class="rdv-time">
                                    <i class="fas fa-clock"></i>
                                    {{ rdv.heureRdv|date('H:i') }}
                                </div>
                            </div>
                            <span class="rdv-status status-{{ rdv.statut|lower|replace({' ': '-', '√©': 'e'}) }}">
                                {{ rdv.statut }}
                            </span>
                        </div>

                        <div class="rdv-doctor">
                            <div class="doctor-avatar">
                                {{ rdv.medecin.prenom|slice(0, 1) }}{{ rdv.medecin.nom|slice(0, 1) }}
                            </div>
                            <div class="doctor-info">
                                <div class="doctor-name">Dr. {{ rdv.medecin.nom }} {{ rdv.medecin.prenom }}</div>
                                <div class="doctor-specialty">{{ rdv.medecin.specialite|default('M√©decin g√©n√©raliste') }}</div>
                            </div>
                        </div>

                        {% if rdv.raison %}
                            <div class="rdv-reason">
                                <strong>üìù Motif de consultation</strong>
                                <p>{{ rdv.raison }}</p>
                            </div>
                        {% endif %}

                        <div class="rdv-actions">
                            {% if rdv.statut == 'Annul√©' %}
                                {# RDV Annul√© : Seulement consulter #}
                                <a href="{{ path('app_rdv_consulter', {id: rdv.id}) }}" 
                                   class="btn-icon btn-icon-warning" 
                                   data-tooltip="Consulter">
                                    <i class="fas fa-eye"></i>
                                </a>
                                
                                {% if rdv.ficheMedicale %}
                                    <a href="{{ path('app_fiche_medicale_show', {id: rdv.ficheMedicale.id}) }}" 
                                       class="btn-icon btn-icon-primary" 
                                       data-tooltip="Voir la fiche">
                                        <i class="fas fa-file-medical"></i>
                                    </a>
                                {% endif %}
                            {% else %}
                                {# RDV Actif : Modifier RDV + G√©rer fiche #}
                                <a href="{{ path('app_rdv_modifier', {id: rdv.id}) }}" 
                                   class="btn-icon btn-icon-primary" 
                                   data-tooltip="Modifier RDV">
                                    <i class="fas fa-calendar-edit"></i>
                                </a>
                                
                                <form action="{{ path('app_rdv_annuler', {id: rdv.id}) }}" 
                                      method="post" 
                                      style="display:inline;"
                                      onsubmit="return confirm('‚ö†Ô∏è Voulez-vous vraiment annuler ce rendez-vous ?')">
                                    <button type="submit" 
                                            class="btn-icon btn-icon-danger" 
                                            data-tooltip="Annuler RDV">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                                
                                {% if not rdv.ficheMedicale %}
                                    {# Cr√©er une fiche m√©dicale #}
                                    <a href="{{ path('app_fiche_medicale_new_for_rdv', {rdvId: rdv.id}) }}" 
                                       class="btn-icon btn-icon-success" 
                                       data-tooltip="Cr√©er Fiche">
                                        <i class="fas fa-file-medical-alt"></i>
                                    </a>
                                {% else %}
                                    {# Modifier la fiche m√©dicale existante #}
                                    <a href="{{ path('app_fiche_medicale_edit', {id: rdv.ficheMedicale.id}) }}" 
                                       class="btn-icon btn-icon-info" 
                                       data-tooltip="Modifier Fiche">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-calendar-times"></i>
                </div>
                <h3>Aucun rendez-vous</h3>
                <p>Vous n'avez aucun rendez-vous pour le moment</p>
                <a href="{{ path('app_rdv_prendre') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle"></i> <span>Prendre mon premier rendez-vous</span>
                </a>
            </div>
        {% endif %}
    </div>
</div>

<script>
    // Auto-dismiss alerts avec animation
    document.querySelectorAll('.alert').forEach(alert => {
        setTimeout(() => {
            alert.style.transition = 'all 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55)';
            alert.style.opacity = '0';
            alert.style.transform = 'translateX(100%) scale(0.8)';
            setTimeout(() => alert.remove(), 500);
        }, 5000);
    });

    // Compteur anim√© pour les statistiques
    function animateCounter(element) {
        const target = parseInt(element.textContent);
        if (isNaN(target)) return;
        
        const duration = 1000;
        const increment = target / (duration / 16);
        let current = 0;

        const updateCounter = () => {
            current += increment;
            if (current < target) {
                element.textContent = Math.floor(current);
                requestAnimationFrame(updateCounter);
            } else {
                element.textContent = target;
            }
        };

        updateCounter();
    }

    // Animer les compteurs au chargement
    const statObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const counter = entry.target.querySelector('h3');
                animateCounter(counter);
                statObserver.unobserve(entry.target);
            }
        });
    }, { threshold: 0.5 });

    document.querySelectorAll('.stat-card').forEach(card => {
        statObserver.observe(card);
    });

    // Animation au scroll pour les cartes
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    document.querySelectorAll('.rdv-card, .stat-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
    });

    console.log('üè• MEDINOVA - Mes Rendez-vous charg√©s avec succ√®s!');
    console.log('üé® Palette de couleurs: Mughal Green, Prussian Blue, Teal Blue, Pastel Blue, Light Silver');
    console.log('‚ú® Design harmonis√© avec les fiches m√©dicales');
</script>
{% endblock %}
