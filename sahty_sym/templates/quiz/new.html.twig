<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ajouter un Quiz - Sahty</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS Bootstrap et style -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

{% include 'partials/navbar.html.twig' %}

<div class="container mt-5 pt-5">

    <!-- Titre et retour -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Ajouter un Quiz</h1>
        <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-5">

            {# Formulaire Symfony, désactivation HTML5 #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <!-- Nom du Quiz -->
            <div class="mb-4">
                {{ form_label(form.name, 'Nom du Quiz', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex : Quiz Stress'}}) }}
                <div class="text-danger small mt-1">{{ form_errors(form.name) }}</div>
            </div>

            <!-- Description -->
            <div class="mb-4">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'Description détaillée du quiz...'}}) }}
                <div class="text-danger small mt-1">{{ form_errors(form.description) }}</div>
            </div>

            <!-- Questions -->
            <div class="mb-4">
                {{ form_label(form.questions, 'Questions', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.questions, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger small mt-1">{{ form_errors(form.questions) }}</div>
                <small class="text-muted">Ajoutez vos questions une par une. Vous pouvez ajouter ou supprimer des champs.</small>
            </div>

            <!-- Boutons -->
            <div class="mt-5 d-flex justify-content-end gap-3">
                <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-secondary btn-lg">
                    Annuler
                </a>
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check-circle-fill me-2"></i> Créer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- JS Bootstrap -->
<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
