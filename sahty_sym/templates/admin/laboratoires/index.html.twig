{% extends 'base.html.twig' %}

{% block title %}Gestion des laboratoires - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Gestion des laboratoires</h4>
                <div>
                    <a href="{{ path('admin_laboratoires_stats') }}" class="btn btn-info me-2">
                        <i class="fas fa-chart-bar"></i> Statistiques
                    </a>
                    <a href="{{ path('admin_laboratoire_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau laboratoire
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de recherche/filtre -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="search" 
                                   placeholder="Rechercher par nom, ville..." value="{{ searchQuery|default('') }}">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="ville">
                                <option value="">Toutes les villes</option>
                                {% for ville in villes %}
                                    <option value="{{ ville }}" {% if selectedVille == ville %}selected{% endif %}>
                                        {{ ville }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="disponible">
                                <option value="">Tous</option>
                                <option value="1" {% if selectedDisponible == '1' %}selected{% endif %}>Disponibles</option>
                                <option value="0" {% if selectedDisponible == '0' %}selected{% endif %}>Indisponibles</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des laboratoires -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Ville</th>
                                    <th>Adresse</th>
                                    <th>Téléphone</th>
                                    <th>Email</th>
                                    <th>Disponibilité</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for laboratoire in laboratoires %}
                                    <tr>
                                        <td class="fw-bold">{{ laboratoire.nom }}</td>
                                        <td>{{ laboratoire.ville }}</td>
                                        <td>{{ laboratoire.adresse }}</td>
                                        <td>{{ laboratoire.telephone }}</td>
                                        <td>{{ laboratoire.email ?: '-' }}</td>
                                        <td>
                                            {% if laboratoire.disponible %}
                                                <span class="badge bg-success">Disponible</span>
                                            {% else %}
                                                <span class="badge bg-danger">Indisponible</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('admin_laboratoire_view', {'id': laboratoire.id}) }}" 
                                                   class="btn btn-info" title="Voir détails">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('admin_laboratoire_edit', {'id': laboratoire.id}) }}" 
                                                   class="btn btn-warning" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                               <form method="post" action="{{ path('admin_laboratoire_toggle_disponibilite', {'id': laboratoire.id}) }}" 
      style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('toggle-laboratoire' ~ laboratoire.id) }}">
    <button type="submit" class="btn btn-secondary" 
            title="{{ laboratoire.disponible ? 'Marquer indisponible' : 'Marquer disponible' }}">
        <i class="fas fa-{{ laboratoire.disponible ? 'times' : 'check' }}"></i>
    </button>
</form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <i class="fas fa-flask fa-3x mb-3 text-muted"></i>
                                            <p class="mb-0">Aucun laboratoire trouvé</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}