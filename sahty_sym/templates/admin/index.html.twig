                                    <td><span class="fw-medium">{{ record.imc ? record.imc|number_format(1) : '—' }}</span></td>
                                    <td>
                                        {% if record.categorieImc %}
                                            <span class="role-badge 
                                                {% if record.categorieImc == 'Maigreur' %}warning
                                                {% elseif record.categorieImc == 'Normal' %}success
                                                {% elseif record.categorieImc == 'Surpoids' %}info
                                                {% elseif record.categorieImc == 'Obésité' %}danger
                                                {% endif %}">
                                                {{ record.categorieImc }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="status-badge 
                                            {% if record.statut == 'actif' %}status-active
                                            {% else %}status-inactive{% endif %}">
                                            <i class="fas fa-{{ record.statut == 'actif' ? 'check-circle' : 'times-circle' }}"></i>
                                            {{ record.statut|capitalize }}
                                        </span>
                                    </td>
                                    
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-file-medical fa-2x mb-2"></i>
                                        <p class="mb-0">Aucune fiche médicale récente</p>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                

            <!-- Footer -->
            <footer class="animate-slide-in" style="animation-delay: 1.8s;">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p>&copy; {{ "now"|date("Y") }} {{ app_name }}. Tous droits réservés.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p>Version {{ app_version }} | Dernière mise à jour: {{ "now"|date("d/m/Y") }}</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar toggle
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                });
            }

            // User Distribution Chart
            const userDistributionData = {
                doctors: {{ user_distribution.doctors|default(15)|json_encode|raw }},
                patients: {{ user_distribution.patients|default(75)|json_encode|raw }},
                staff: {{ user_distribution.staff|default(8)|json_encode|raw }},
                admin: {{ user_distribution.admin|default(2)|json_encode|raw }}
            };

            Chart.defaults.font.family = "'Inter', sans-serif";
            Chart.defaults.font.size = 12;

            const ctx = document.getElementById('userDistributionChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Médecins', 'Patients', 'Staff', 'Administrateurs'],
                        datasets: [{
                            data: [
                                userDistributionData.doctors,
                                userDistributionData.patients,
                                userDistributionData.staff,
                                userDistributionData.admin
                            ],
                            backgroundColor: ['#2563eb', '#10b981', '#f59e0b', '#ef4444'],
                            borderWidth: 0,
                            borderRadius: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    usePointStyle: true,
                                    boxWidth: 8,
                                    padding: 20
                                }
                            }
                        }
                    }
                });
            }

            // Progress bars animation
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });

            // Auto-hide alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            // Tooltips
            const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            tooltips.forEach(tooltip => {
                new bootstrap.Tooltip(tooltip);
            });
        });
    </script>
</body>
</html>