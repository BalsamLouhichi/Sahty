<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Nouveau Groupe Cible</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Google Fonts #}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    {# FontAwesome #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">

    {# Bootstrap #}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    {# Main CSS #}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <style>
        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
        }

        .btn-primary, .btn-secondary {
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            border-radius: 0.5rem;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }

        .card-body {
            padding: 2rem;
        }

        .container-fluid.py-5 {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
    </style>
</head>


<body>

{# Header #}
{% include 'partials/header.html.twig' %}


<!-- Main Content -->
<div class="container-fluid py-5">

    <div class="container">

        <!-- Page Header -->
        <div class="row mb-5">
    <div class="col-md-8">
        <h1 class="display-6 fw-bold mb-2">
            <i class="fas fa-users text-primary me-2"></i>
            Ajouter un Groupe Cible
        </h1>
        <p class="text-muted">
            Définir un nouveau groupe pour les événements médicaux
        </p>
    </div>

    <div class="col-md-4 d-flex align-items-center justify-content-end">
        {% if referrer == 'evenements_evenement_add' %}
            <a href="{{ path('evenements_evenement_add') }}"
               class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à l'événement
            </a>
        {% elseif referrer == 'admin_evenement_update' and event_id %}
            <a href="{{ path('admin_evenement_update', {'id': event_id}) }}"
               class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à l'événement
            </a>
        {% else %}
            <a href="{{ path('groupe_cible_index') }}"
               class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        {% endif %}
    </div>
</div>


        <!-- Form Card -->
        <div class="card">

            <div class="card-body">

    {{ form_start(form) }}

    <!-- Nom -->
    <div class="mb-3">
        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}

        {{ form_widget(form.nom, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'Ex: Patients diabétiques'
            }
        }) }}

        {{ form_errors(form.nom) }}
    </div>

    <!-- Type -->
    <div class="mb-3">
        {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}

        {{ form_widget(form.type, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'Ex: Patients chroniques'
            }
        }) }}

        {{ form_errors(form.type) }}
    </div>

    <!-- Critère -->
    <div class="mb-3">
        {{ form_label(form.critereOptionnel, null, {'label_attr': {'class': 'form-label'}}) }}

        {{ form_widget(form.critereOptionnel, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'Ex: Age > 50'
            }
        }) }}

        {{ form_errors(form.critereOptionnel) }}
    </div>

    <!-- Buttons -->
  <div class="d-flex justify-content-end mt-4">
    {% if referrer == 'evenements_evenement_add' %}
        <a href="{{ path('evenements_evenement_add') }}"
           class="btn btn-secondary me-2">
            Annuler
        </a>
    {% elseif referrer == 'admin_evenement_update' and event_id %}
        <a href="{{ path('admin_evenement_update', {'id': event_id}) }}"
           class="btn btn-secondary me-2">
            Annuler
        </a>
    {% else %}
        <a href="{{ path('groupe_cible_index') }}"
           class="btn btn-secondary me-2">
            Annuler
        </a>
    {% endif %}
    
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save me-1"></i>
        Enregistrer
    </button>
</div>

    {{ form_end(form) }}

</div>


        </div>


    </div>

</div>


{# Footer #}
{% include 'partials/footer.html.twig' %}


<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
