{% extends 'base.html.twig' %}

{% block title %}MEDINOVA - D√©tails du Rendez-vous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        /* ============ PALETTE MEDINOVA ============ */
        :root {
            --mughal-green: #304D30;
            --prussian-blue: #163A5F;
            --teal-blue: #1D5D9B;
            --pastel-blue: #75C2F6;
            --light-silver: #F4F6FF;
            
            --primary: #1D5D9B;
            --primary-light: #E8F4F8;
            --primary-dark: #163A5F;
            
            --secondary: #304D30;
            --secondary-light: #4A7C59;
            --secondary-dark: #1E3A1E;
            
            --accent: #75C2F6;
            --accent-light: #B4E4FF;
            
            --light: #F4F6FF;
            --light-alt: #E8EAF6;
            
            --dark: #1A2332;
            --dark-light: #2C3E50;
            
            --success: #4A7C59;
            --success-light: #D4E9DA;
            --danger: #C1666B;
            --danger-light: #F8E8E9;
            --warning: #D4A574;
            --warning-light: #F9F0E7;
            --info: #75C2F6;
            --info-light: #E8F4F8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, var(--light) 0%, var(--light-alt) 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 15% 20%, rgba(29, 93, 155, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 85% 80%, rgba(48, 77, 48, 0.08) 0%, transparent 40%);
            pointer-events: none;
            z-index: 0;
            animation: backgroundPulse 20s ease-in-out infinite;
        }

        @keyframes backgroundPulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .details-section {
            padding: 40px 20px;
            position: relative;
            z-index: 1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* ============ HEADER ============ */
        .page-header {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(30px) saturate(180%);
            border-radius: 30px;
            padding: 40px;
            margin-bottom: 35px;
            box-shadow: 
                0 8px 32px rgba(29, 93, 155, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.5);
            border: 2px solid rgba(117, 194, 246, 0.3);
            animation: fadeInDown 0.6s ease;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-title h1 {
            font-size: 2.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-title h1 i {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 20px rgba(29, 93, 155, 0.3));
        }

        .header-title p {
            color: var(--dark-light);
            font-size: 1.1rem;
            font-weight: 500;
        }

        .btn-back {
            padding: 14px 28px;
            border-radius: 16px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(29, 93, 155, 0.3);
        }

        .btn-back:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(29, 93, 155, 0.4);
        }

        /* ============ DETAILS GRID ============ */
        .details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .details-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 35px;
            box-shadow: 
                0 15px 50px rgba(29, 93, 155, 0.12),
                inset 0 1px 0 rgba(255, 255, 255, 0.9);
            border: 2px solid rgba(117, 194, 246, 0.2);
            position: relative;
            overflow: hidden;
            animation: slideInUp 0.6s ease;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 6px;
            height: 100%;
            background: linear-gradient(180deg, var(--primary) 0%, var(--secondary) 100%);
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 3px solid var(--light-alt);
        }

        .card-icon {
            width: 60px;
            height: 60px;
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(117, 194, 246, 0.15) 0%, var(--light) 100%);
            border: 2px solid rgba(117, 194, 246, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            color: var(--primary);
            box-shadow: 0 8px 25px rgba(29, 93, 155, 0.12);
        }

        .card-header h2 {
            font-size: 1.5rem;
            font-weight: 900;
            color: var(--dark);
        }

        .info-row {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            padding: 18px 0;
            border-bottom: 1px solid var(--light-alt);
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary-light) 0%, rgba(117, 194, 246, 0.2) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 1.1rem;
            flex-shrink: 0;
            box-shadow: 0 4px 15px rgba(29, 93, 155, 0.1);
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-size: 0.85rem;
            color: var(--dark-light);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 6px;
        }

        .info-value {
            font-size: 1.1rem;
            font-weight: 800;
            color: var(--dark);
        }

        .status-badge {
            display: inline-block;
            padding: 8px 18px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.12);
        }

        .status-en-attente {
            background: linear-gradient(135deg, var(--warning) 0%, #C89B5E 100%);
            color: var(--dark);
        }

        .status-confirm√©, .status-confirme {
            background: linear-gradient(135deg, var(--success) 0%, var(--secondary-light) 100%);
            color: white;
        }

        .status-annul√©, .status-annule {
            background: linear-gradient(135deg, var(--danger) 0%, #B85860 100%);
            color: white;
        }

        .patient-card {
            background: linear-gradient(135deg, rgba(117, 194, 246, 0.08) 0%, var(--light) 100%);
            border: 2px solid rgba(117, 194, 246, 0.3);
            padding: 25px;
            border-radius: 20px;
            margin-top: 20px;
        }

        .patient-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .patient-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--secondary) 0%, var(--secondary-light) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: 800;
            color: white;
            box-shadow: 0 8px 25px rgba(48, 77, 48, 0.3);
            text-transform: uppercase;
        }

        .patient-info h3 {
            font-size: 1.5rem;
            font-weight: 900;
            color: var(--dark);
            margin-bottom: 8px;
        }

        .patient-meta {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--dark-light);
            font-weight: 600;
        }

        .patient-meta i {
            color: var(--primary);
        }

        .reason-box {
            background: white;
            padding: 20px;
            border-radius: 16px;
            border-left: 4px solid var(--primary);
            margin-top: 15px;
        }

        .reason-box strong {
            display: block;
            color: var(--primary);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            margin-bottom: 12px;
            font-weight: 800;
        }

        .reason-box p {
            color: var(--dark);
            line-height: 1.6;
            font-weight: 500;
            margin: 0;
        }

        /* ============ ACTION BUTTONS ============ */
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 16px 32px;
            border-radius: 16px;
            font-weight: 700;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.2);
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success) 0%, var(--secondary-light) 100%);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger) 0%, #B85860 100%);
            color: white;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
        }

        .full-width {
            grid-column: 1 / -1;
        }

        /* Responsive */
        @media (max-width: 968px) {
            .details-grid {
                grid-template-columns: 1fr;
            }

            .header-title h1 {
                font-size: 2rem;
            }
        }

        @media (max-width: 768px) {
            .details-section {
                padding: 20px 10px;
            }

            .page-header {
                padding: 25px;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: var(--light);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 10px;
            border: 2px solid var(--light);
        }
    </style>
{% endblock %}

{% block body %}
<div class="details-section">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-title">
                    <h1><i class="fas fa-file-medical-alt"></i> D√©tails du Rendez-vous</h1>
                    <p>Informations compl√®tes de la consultation</p>
                </div>
                <a href="{{ path('app_medecin_rdv_liste') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Retour √† la liste
                </a>
            </div>
        </div>

        <!-- Details Grid -->
        <div class="details-grid">
            <!-- Informations RDV -->
            <div class="details-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h2>Informations du RDV</h2>
                </div>

                <div class="info-row">
                    <div class="info-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Date</div>
                        <div class="info-value">{{ rdv.dateRdv|date('d/m/Y') }}</div>
                    </div>
                </div>

                <div class="info-row">
                    <div class="info-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Heure</div>
                        <div class="info-value">{{ rdv.heureRdv|date('H:i') }}</div>
                    </div>
                </div>

                <div class="info-row">
                    <div class="info-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Statut</div>
                        <div class="info-value">
                            <span class="status-badge status-{{ rdv.statut|lower|replace({' ': '-'}) }}">
                                {{ rdv.statut }}
                            </span>
                        </div>
                    </div>
                </div>

                <div class="info-row">
                    <div class="info-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Cr√©√© le</div>
                        <div class="info-value">{{ rdv.creeLe|date('d/m/Y √† H:i') }}</div>
                    </div>
                </div>

                {% if rdv.dateValidation %}
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Valid√© le</div>
                            <div class="info-value">{{ rdv.dateValidation|date('d/m/Y √† H:i') }}</div>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Informations Patient -->
            <div class="details-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <h2>Informations Patient</h2>
                </div>

                <div class="patient-card">
                    <div class="patient-header">
                        <div class="patient-avatar">
                            {{ rdv.patient.prenom|slice(0, 1) }}{{ rdv.patient.nom|slice(0, 1) }}
                        </div>
                        <div class="patient-info">
                            <h3>{{ rdv.patient.nom }} {{ rdv.patient.prenom }}</h3>
                            <div class="patient-meta">
                                <i class="fas fa-envelope"></i>
                                {{ rdv.patient.email }}
                            </div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">T√©l√©phone</div>
                            <div class="info-value">{{ rdv.patient.telephone|default('Non renseign√©') }}</div>
                        </div>
                    </div>

                    {% if rdv.patient.dateNaissance %}
                        <div class="info-row">
                            <div class="info-icon">
                                <i class="fas fa-birthday-cake"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Date de naissance</div>
                                <div class="info-value">
                                    {{ rdv.patient.dateNaissance|date('d/m/Y') }}
                                    {% if rdv.patient.age %}
                                        ({{ rdv.patient.age }} ans)
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Motif de consultation -->
            {% if rdv.raison %}
                <div class="details-card full-width">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-clipboard"></i>
                        </div>
                        <h2>Motif de consultation</h2>
                    </div>

                    <div class="reason-box">
                        <strong>üìù Description</strong>
                        <p>{{ rdv.raison }}</p>
                    </div>
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="details-card full-width">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <h2>Actions disponibles</h2>
                </div>

                <div class="action-buttons">
                    {% if rdv.statut == 'en attente' %}
                        <form action="{{ path('app_medecin_rdv_confirmer', {id: rdv.id}) }}" 
                              method="post" 
                              style="display:inline;">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Confirmer le rendez-vous
                            </button>
                        </form>
                    {% endif %}

                    {% if rdv.statut != 'Annul√©' %}
                        <form action="{{ path('app_medecin_rdv_annuler', {id: rdv.id}) }}" 
                              method="post" 
                              style="display:inline;"
                              onsubmit="return confirm('‚ö†Ô∏è Voulez-vous vraiment annuler ce rendez-vous ?')">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times"></i> Annuler le rendez-vous
                            </button>
                        </form>
                    {% endif %}

                    <a href="{{ path('app_medecin_fiche_medicale', {rdvId: rdv.id}) }}" class="btn btn-primary">
                        <i class="fas fa-file-medical"></i> 
                        {% if rdv.ficheMedicale %}
                            Modifier la fiche m√©dicale
                        {% else %}
                            Cr√©er la fiche m√©dicale
                        {% endif %}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    console.log('üè• MEDINOVA - D√©tails RDV charg√©s avec succ√®s!');
</script>
{% endblock %}
