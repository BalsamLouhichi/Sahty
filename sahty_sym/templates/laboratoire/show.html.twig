{# templates/demande_analyse/show.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>MEDINOVA - Détails de la Demande</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    
    {# Mêmes imports CSS que les autres pages #}
    <link href="{{ asset('img/favicon.ico') }}" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    
    <style>
        .show-header {
            background: linear-gradient(rgba(29, 42, 77, 0.9), rgba(29, 42, 77, 0.9)), url('{{ asset("img/lab-banner.jpg") }}');
            background-size: cover;
            background-position: center;
            padding: 100px 0 80px;
        }
        
        .detail-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            padding: 30px;
            margin-bottom: 25px;
        }
        
        .detail-section {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        
        .detail-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }
        
        .detail-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 5px;
            display: block;
        }
        
        .detail-value {
            color: #666;
            font-size: 1.1rem;
        }
        
        .badge-custom {
            padding: 8px 15px;
            border-radius: 30px;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 30px;
        }
        
        .btn-action {
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
    </style>
</head>

<body>
{% include 'partials/header.html.twig' %}

{% if test_mode is defined and test_mode %}
    <div class="test-mode-indicator">
        <i class="fas fa-flask me-1"></i> MODE TEST
    </div>
{% endif %}

<div class="container-fluid show-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent p-0 mb-3">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}" class="text-white">Accueil</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_demande_analyse_mes_demandes') }}" class="text-white">Mes Demandes</a>
                        </li>
                        <li class="breadcrumb-item text-white active" aria-current="page">
                            Détails #{{ demande_analyse.id }}
                        </li>
                    </ol>
                </nav>

                <h1 class="display-3 text-white mb-4">Détails de la Demande</h1>
                <p class="text-white fs-5">ID: #{{ demande_analyse.id }}</p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="detail-card">
                    {# Informations principales #}
                    <div class="detail-section">
                        <h3 class="mb-4">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Informations principales
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Type de bilan</span>
                                <div class="detail-value">{{ demande_analyse.typeBilan }}</div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Statut</span>
                                <div class="detail-value">
                                    {% if demande_analyse.resultatPdf %}
                                        <span class="badge-custom bg-success">Envoye</span>
                                    {% else %}
                                        <span class="badge-custom bg-warning">En attente</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Priorité</span>
                                <div class="detail-value">
                                    {% if demande_analyse.priorite == 'urgent' %}
                                        <span class="badge-custom bg-danger">Urgent</span>
                                    {% elseif demande_analyse.priorite == 'haute' %}
                                        <span class="badge-custom bg-warning">Haute</span>
                                    {% else %}
                                        <span class="badge-custom bg-primary">Normale</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Date de création</span>
                                <div class="detail-value">{{ demande_analyse.dateDemande|date('d/m/Y H:i') }}</div>
                            </div>
                        </div>
                    </div>
                    
                    {# Informations du laboratoire #}
                    <div class="detail-section">
                        <h3 class="mb-4">
                            <i class="fas fa-hospital text-primary me-2"></i>
                            Laboratoire
                        </h3>
                        
                        {% if demande_analyse.laboratoire %}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <span class="detail-label">Nom</span>
                                    <div class="detail-value">{{ demande_analyse.laboratoire.nom }}</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <span class="detail-label">Adresse</span>
                                    <div class="detail-value">{{ demande_analyse.laboratoire.adresse ?? 'Non spécifiée' }}</div>
                                </div>
                                
                                {% if demande_analyse.laboratoire.telephone %}
                                <div class="col-md-6 mb-3">
                                    <span class="detail-label">Téléphone</span>
                                    <div class="detail-value">{{ demande_analyse.laboratoire.telephone }}</div>
                                </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <p class="text-muted">Aucun laboratoire spécifié</p>
                        {% endif %}
                    </div>
                    
                    {# Notes #}
                    {% if demande_analyse.notes %}
                    <div class="detail-section">
                        <h3 class="mb-4">
                            <i class="fas fa-sticky-note text-primary me-2"></i>
                            Notes
                        </h3>
                        <div class="detail-value">{{ demande_analyse.notes|nl2br }}</div>
                    </div>
                    {% endif %}
                    
                    {# Dates importantes #}
                    <div class="detail-section">
                        <h3 class="mb-4">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            Dates importantes
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Date de création</span>
                                <div class="detail-value">{{ demande_analyse.dateDemande|date('d/m/Y H:i') }}</div>
                            </div>
                            
                            {% if demande_analyse.programmeLe %}
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Date programmée</span>
                                <div class="detail-value">{{ demande_analyse.programmeLe|date('d/m/Y H:i') }}</div>
                            </div>
                            {% endif %}
                            
                            {% if demande_analyse.envoyeLe %}
                            <div class="col-md-6 mb-3">
                                <span class="detail-label">Date d'envoi</span>
                                <div class="detail-value">{{ demande_analyse.envoyeLe|date('d/m/Y H:i') }}</div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    {# Actions #}
                    <div class="action-buttons">
                        <a href="{{ path('app_demande_analyse_mes_demandes') }}" 
                           class="btn btn-secondary btn-action">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        
                        {% if demande_analyse.resultatPdf is null %}
                            <a href="{{ path('app_demande_analyse_edit', {'id': demande_analyse.id}) }}" 
                               class="btn btn-warning btn-action">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        {% endif %}
                        
                        {% if app.user and (is_granted('ROLE_ADMIN') or is_granted('ROLE_MEDECIN')) and demande_analyse.resultatPdf %}
                            <div class="dropdown d-inline">
                                <button class="btn btn-primary btn-action dropdown-toggle" 
                                        type="button" 
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-cog"></i> Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form method="post" 
                                              action="{{ path('app_demande_analyse_changer_statut', {'id': demande_analyse.id, 'statut': 'envoye'}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('changer-statut' ~ demande_analyse.id) }}">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-paper-plane text-success"></i> Marquer comme envoyé
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                {# Informations patient #}
                <div class="detail-card mb-4">
                    <h4 class="mb-4">
                        <i class="fas fa-user text-primary me-2"></i>
                        Patient
                    </h4>
                    
                    {% if demande_analyse.patient %}
                        <div class="mb-3">
                            <span class="detail-label">Nom complet</span>
                            <div class="detail-value">{{ demande_analyse.patient.nomComplet ?? 'Non spécifié' }}</div>
                        </div>
                        
                        {% if demande_analyse.patient.email %}
                        <div class="mb-3">
                            <span class="detail-label">Email</span>
                            <div class="detail-value">{{ demande_analyse.patient.email }}</div>
                        </div>
                        {% endif %}
                    {% else %}
                        <p class="text-muted">Patient non spécifié</p>
                    {% endif %}
                </div>
                
                {# Informations médecin #}
                {% if demande_analyse.medecin %}
                <div class="detail-card">
                    <h4 class="mb-4">
                        <i class="fas fa-user-md text-primary me-2"></i>
                        Médecin prescripteur
                    </h4>
                    
                    <div class="mb-3">
                        <span class="detail-label">Nom</span>
                        <div class="detail-value">Dr. {{ demande_analyse.medecin.nomComplet }}</div>
                    </div>
                    
                    {% if demande_analyse.medecin.specialite %}
                    <div class="mb-3">
                        <span class="detail-label">Spécialité</span>
                        <div class="detail-value">{{ demande_analyse.medecin.specialite }}</div>
                    </div>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% include 'partials/footer.html.twig' %}

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('lib/easing/easing.min.js') }}"></script>
<script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
<script src="{{ asset('js/main.js') }}"></script>
</body>
</html>