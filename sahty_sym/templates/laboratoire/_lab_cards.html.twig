{% if laboratoires is defined and laboratoires|length > 0 %}
    {% for lab in laboratoires %}
        <div class="col-lg-4 col-md-6">
            <div class="labo-card">
                <img class="labo-img" src="{{ asset(lab.imagePath ?? 'img/lab.jpg') }}" alt="{{ lab.nom ?? 'Laboratory' }}">
                <div class="labo-icon"><i class="{{ lab.icon ?? 'fa fa-hospital' }}"></i></div>
                <div class="p-4">
                    <h3 class="mb-2">{{ lab.nom }}</h3>
                    <p class="labo-location mb-3">
                        <i class="fa fa-map-marker-alt text-primary me-2"></i>{{ lab.adresse ?? '' }}
                    </p>
                    <p class="mb-3">{{ lab.description ?? '' }}</p>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_labo_show', {id: lab.id}) }}" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12">
        <p class="text-center text-muted">No laboratories found with these filters.</p>
    </div>
{% endif %}
