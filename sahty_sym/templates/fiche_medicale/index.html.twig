                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-notes-medical me-2"></i>Observations
                                </h6>
                            </div>
                            <div class="card-body">
                                {{ fiche.observations|nl2br }}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <a href="{{ path('app_fiche_medicale_index', {'edit': fiche.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
