        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-decoration-none text-body pe-3" href="tel:+0123456789">
                            <i class="bi bi-telephone me-2"></i>+01 23 45 67 89
                        </a>
                        <span class="text-body">|</span>
                        <a class="text-decoration-none text-body px-3" href="mailto:info@medinova.fr">
                            <i class="bi bi-envelope me-2"></i>info@medinova.fr
                        </a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-body px-2" href="#">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-body px-2" href="#">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-body px-2" href="#">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-body px-2" href="#">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <!-- Navbar Start -->
    <div class="container-fluid sticky-top bg-white shadow-sm">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
                <a href="{{ path('app_home') }}" class="navbar-brand">
                    <h1 class="m-0 text-uppercase text-primary">
                        <i class="fa fa-clinic-medical me-2"></i>Medinova
                    </h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a href="{{ path('app_home') }}" class="nav-item nav-link">Accueil</a>
                        <a href="#" class="nav-item nav-link">Rendez-vous</a>
                        <a href="{{ path('app_fiche_medicale_index') }}" class="nav-item nav-link active">Fiches Médicales</a>
                        <a href="#" class="nav-item nav-link">Contact</a>
                        {% if app.user %}
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>{{ app.user.email }}
                                </a>
                                <div class="dropdown-menu m-0">
                                    <a href="{{ path('app_logout') }}" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->

    <!-- Fiches Médicales Liste Start -->
    <div class="container-fluid medical-form-section">
        <div class="container">
            <!-- En-tête -->
            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="text-center">
                        <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5 mb-3">
                            Gestion Médicale
                        </h5>
                        <h1 class="display-6 mb-3">Fiches Médicales Patients</h1>
                        <p class="lead text-muted mb-4">
                            Gestion complète des dossiers médicaux des patients.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Messages Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Actions -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="{{ path('app_fiche_medicale_index', {'new': true}) }}" class="btn btn-primary btn-medical">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Fiche
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-medical">
                            <i class="fas fa-file-export me-2"></i>Exporter
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-medical">
                            <i class="fas fa-print me-2"></i>Imprimer
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <form method="get" class="search-box">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ app.request.get('search') }}">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-3 col-6">
                    <div class="card border-0 bg-primary text-white shadow">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ fiches|length }}</h3>
                            <p class="mb-0">Fiches Total</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-0 bg-success text-white shadow">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ fiches|filter(f => f.statut == 'actif')|length }}</h3>
                            <p class="mb-0">Actives</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-0 bg-warning text-white shadow">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ fiches|filter(f => f.statut == 'modifié')|length }}</h3>
                            <p class="mb-0">Modifiées</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-0 bg-info text-white shadow">
                        <div class="card-body text-center">
                            <h3 class="mb-0">
                                {% set withImc = fiches|filter(f => f.imc is not null)|length %}
                                {{ withImc }}
                            </h3>
                            <p class="mb-0">Avec IMC</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des fiches -->
            {% if fiches is not empty %}
                <div class="row">
                    {% for fiche in fiches %}
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card fiche-card h-100">
                                <div class="card-body position-relative">
                                    <span class="fiche-status status-{{ fiche.statut }}">
                                        {{ fiche.statut|default('Non défini') }}
                                    </span>
                                    
                                    <h5 class="card-title text-primary mb-3">
                                        <i class="fas fa-file-medical me-2"></i>
                                        Fiche #{{ fiche.id }}
                                        {% if fiche.patient %}
                                            <br><small class="text-muted">
                                                {% if fiche.patient.nom is defined and fiche.patient.prenom is defined %}
                                                    {{ fiche.patient.nom }} {{ fiche.patient.prenom }}
                                                {% else %}
                                                    {{ fiche.patient }}
                                                {% endif %}
                                            </small>
                                        {% endif %}
                                    </h5>
                                    
                                    <div class="fiche-details mb-3">
                                        {% if fiche.taille and fiche.poids %}
                                            <div class="mb-2">
                                                <strong>Taille/Poids:</strong> 
                                                {{ fiche.taille }} m / {{ fiche.poids }} kg
                                            </div>
                                            {% if fiche.imc %}
                                                <div class="mb-2">
                                                    <strong>IMC:</strong> 
                                                    <span class="imc-indicator imc-{{ fiche.categorieImc|lower|replace({' ': '-'}) }}">
                                                        {{ fiche.imc|number_format(2) }} ({{ fiche.categorieImc }})
                                                    </span>
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                        
                                        {% if fiche.antecedents %}
                                            <div class="mb-2">
                                                <strong>Antécédents:</strong>
                                                <p class="mb-0 text-truncate">{{ fiche.antecedents|slice(0, 100) }}...</p>
                                            </div>
                                        {% endif %}
                                        
                                        {% if fiche.allergies %}
                                            <div class="mb-2">
                                                <strong>Allergies:</strong>
                                                <p class="mb-0 text-truncate">{{ fiche.allergies|slice(0, 100) }}...</p>
                                            </div>
                                        {% endif %}
                                        
                                        <div class="mb-2">
                                            <strong>Créée le:</strong> {{ fiche.creeLe|date('d/m/Y H:i') }}
                                        </div>
                                        
                                        {% if fiche.modifieLe %}
                                            <div class="mb-2">
                                                <strong>Modifiée le:</strong> {{ fiche.modifieLe|date('d/m/Y H:i') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="action-buttons mt-3">
                                        <a href="{{ path('app_fiche_medicale_index', {'view': fiche.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('app_fiche_medicale_index', {'edit': fiche.id}) }}" 
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <form action="{{ path('app_fiche_medicale_index') }}" 
                                              method="post" 
                                              class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche médicale ?');">
                                            <input type="hidden" name="delete_id" value="{{ fiche.id }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiche.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Message si beaucoup de fiches -->
{% if fiches|length > 12 %}
    <div class="alert alert-info mt-4 text-center">
        <i class="fas fa-info-circle me-2"></i>
        Affichage de {{ fiches|length }} fiches médicales. 
        {% if fiches|length > 20 %}
            <br><small>Utilisez la recherche pour filtrer les résultats.</small>
        {% endif %}
    </div>
{% endif %}
            {% else %}
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-file-medical-alt fa-4x text-muted mb-4"></i>
                        <h3 class="mb-3">Aucune fiche médicale</h3>
                        <p class="text-muted mb-4">
                            Vous n'avez pas encore de fiches médicales enregistrées.
                        </p>
                        <a href="{{ path('app_fiche_medicale_index', {'new': true}) }}" class="btn btn-primary btn-medical">
                            <i class="fas fa-plus-circle me-2"></i>Créer votre première fiche
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Fiches Médicales Liste End -->

    <!-- Footer -->
    <div class="container-fluid bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-md-0">&copy; {{ "now"|date('Y') }} <a class="text-primary" href="#">Medinova</a>. Tous droits réservés.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">
                        <a class="text-light me-3" href="#">Mentions légales</a>
                        <a class="text-light me-3" href="#">Confidentialité</a>
                        <a class="text-light" href="#">Contact</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL POUR CRÉATION/MODIFICATION -->
    {% if mode == 'new' or mode == 'edit' %}
    <div class="modal fade show" id="ficheModal" tabindex="-1" style="display: block; background-color: rgba(0,0,0,0.5); position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 1050;">
        <div class="modal-dialog modal-lg" style="margin-top: 50px;">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-{{ mode == 'new' ? 'plus' : 'edit' }} me-2"></i>
                        {{ mode == 'new' ? 'Nouvelle Fiche Médicale' : 'Modifier Fiche #' ~ fiche.id }}
                    </h5>
                    <a href="{{ path('app_fiche_medicale_index') }}" class="btn-close btn-close-white"></a>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <!-- AFFICHAGE DU PATIENT EN LECTURE SEULE (sans champ formulaire) -->
                    {% if fiche.patient %}
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-user me-2"></i>
                            <strong>Patient :</strong> 
                            {% if fiche.patient.nom is defined and fiche.patient.prenom is defined %}
                                {{ fiche.patient.nom }} {{ fiche.patient.prenom }}
                            {% else %}
                                Patient #{{ fiche.patient.id }}
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    <!-- Section Antécédents & Allergies -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-history me-2"></i>Antécédents & Allergies
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.antecedents, {
                                    'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Antécédents médicaux...'},
                                    'label': 'Antécédents médicaux'
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.allergies, {
                                    'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Allergies connues...'},
                                    'label': 'Allergies'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Mesures Physiques -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-weight me-2"></i>Mesures Physiques
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.taille, {
                                    'attr': {'class': 'form-control', 'placeholder': 'Ex: 1.75'},
                                    'label': 'Taille (mètres)'
                                }) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.poids, {
                                    'attr': {'class': 'form-control', 'placeholder': 'Ex: 70'},
                                    'label': 'Poids (kg)'
                                }) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.statut, {
                                    'attr': {'class': 'form-select'},
                                    'label': 'Statut'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Traitements -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-stethoscope me-2"></i>Traitements Médicaux
                        </h6>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.traitement_en_cours, {
                                    'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Traitements en cours...'},
                                    'label': 'Traitement en cours'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Diagnostic -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-file-medical me-2"></i>Diagnostic
                        </h6>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.diagnostic, {
                                    'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Diagnostic principal...'},
                                    'label': 'Diagnostic'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Traitement Prescrit -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-prescription me-2"></i>Traitement Prescrit
                        </h6>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.traitement_prescrit, {
                                    'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Traitements prescrits...'},
                                    'label': 'Traitement prescrit'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Observations -->
                    <div class="modal-section">
                        <h6 class="modal-section-title">
                            <i class="fas fa-notes-medical me-2"></i>Observations
                        </h6>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.observations, {
                                    'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Observations complémentaires...'},
                                    'label': 'Observations'
                                }) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>
                            {{ mode == 'new' ? 'Créer la fiche' : 'Mettre à jour' }}
                        </button>
                        <a href="{{ path('app_fiche_medicale_index') }}" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- MODAL POUR AFFICHAGE DÉTAILLÉ -->
    {% if mode == 'view' and fiche %}
    <div class="modal fade show" id="viewModal" tabindex="-1" style="display: block; background-color: rgba(0,0,0,0.5); position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 1050;">
        <div class="modal-dialog modal-lg" style="margin-top: 50px;">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-file-medical me-2"></i>
