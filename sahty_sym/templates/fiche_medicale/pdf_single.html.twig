            padding: 8px 0;
            border-bottom: 1px solid rgba(29, 93, 155, 0.1);
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            font-weight: 700;
            color: #1D5D9B;
            width: 200px;
            font-size: 10pt;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
