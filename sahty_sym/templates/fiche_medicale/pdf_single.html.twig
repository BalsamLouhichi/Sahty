            margin-top: 20px;
            box-shadow: 0 6px 20px rgba(74, 124, 89, 0.2);
        }

        .imc-label {
            font-size: 11pt;
            color: #2e7d32;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .imc-value {
            font-size: 32pt;
            font-weight: 900;
            color: #1e5631;
            line-height: 1;
            margin: 10px 0;
        }

        .imc-category {
            font-size: 13pt;
            font-weight: 800;
            color: #2e7d32;
            margin-top: 10px;
            padding: 8px 20px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 50px;
            display: inline-block;
        }

        /* ============ PIED DE PAGE PDF ============ */
        .pdf-single-footer {
            background: linear-gradient(135deg, #1a2332 0%, #2c3e50 100%);
            color: white;
            padding: 30px;
            text-align: center;
            border-radius: 15px;
            margin-top: 40px;
            box-shadow: 0 -5px 30px rgba(26, 35, 50, 0.3);
        }

        .pdf-single-footer h3 {
            font-size: 16pt;
            font-weight: 900;
            margin-bottom: 10px;
        }

        .pdf-single-footer p {
            margin: 8px 0;
            opacity: 0.9;
        }

        .confidential-notice {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid rgba(255, 255, 255, 0.3);
            font-size: 9pt;
            font-style: italic;
            opacity: 0.8;
        }

        /* ============ BOUTON IMPRIMER ============ */
        .print-button-container {
            position: fixed;
            top: 100px;
            right: 30px;
            z-index: 9999;
        }

        .btn-print {
            background: linear-gradient(135deg, #1D5D9B 0%, #163A5F 100%);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(29, 93, 155, 0.3);
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
        }

        .btn-print:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(29, 93, 155, 0.4);
        }

        /* ============ RESPONSIVE ============ */
        @media (max-width: 768px) {
            .two-column {
                grid-template-columns: 1fr;
            }

            .print-button-container {
                top: 80px;
                right: 15px;
            }

            .btn-print {
                padding: 12px 20px;
                font-size: 0.9rem;
            }

            .info-label {
                width: 150px;
                font-size: 9pt;
            }
        }
    </style>
{% endblock %}

