    .social-facebook { background: linear-gradient(135deg, #1877F2 0%, #0d5dbf 100%); }
    .social-linkedin { background: linear-gradient(135deg, #0A66C2 0%, #004182 100%); }
    .social-instagram { background: linear-gradient(135deg, #E4405F 0%, #C13584 100%); }

    /* ============ FOOTER BOTTOM ============ */
    .footer-bottom {
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(117, 194, 246, 0.2);
        padding: 25px 0;
        margin-top: 60px;
    }

    .footer-bottom-text {
