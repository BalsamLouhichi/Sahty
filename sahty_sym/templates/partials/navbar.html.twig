{# Partial: Topbar + Navbar - reusable across templates #}
<!-- Topbar -->
<div class="container-fluid py-2 border-bottom d-none d-lg-block bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center">
                    <a class="text-decoration-none text-body pe-3" href="tel:+0123456789">
                        <i class="bi bi-telephone me-2"></i>+01 23 45 67 89
                    </a>
                    <span class="text-body">|</span>
                    <a class="text-decoration-none text-body px-3" href="mailto:info@medinova.fr">
                        <i class="bi bi-envelope me-2"></i>info@medinova.fr
                    </a>
                </div>
            </div>
            <div class="col-md-6 text-center text-lg-end">
                <div class="d-inline-flex align-items-center">
                    <a class="text-body px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="text-body px-2" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="text-body px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="text-body px-2" href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Navbar -->
<div class="container-fluid sticky-top bg-white shadow-sm">
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-3">
            <a href="{{ path('app_home') }}" class="navbar-brand">
                <h1 class="m-0 text-uppercase text-primary">
                    <i class="fa fa-clinic-medical me-2"></i>Medinova
                </h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="{{ path('app_home') }}" class="nav-item nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}">Accueil</a>
                    <a href="{{ path('app_rdv_mes_rdv') }}" class="nav-item nav-link">Rendez-vous</a>
                    <a href="{{ path('app_fiche_medicale_index') }}" class="nav-item nav-link {% if app.request.get('_route') starts with('app_fiche_medicale') %}active{% endif %}">Fiches Médicales</a>
                    <a href="#" class="nav-item nav-link">Contact</a>

                    {% if app.user %}
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>{{ app.user.email }}
                            </a>
                            <div class="dropdown-menu m-0">
                                <a href="{{ path('app_logout') }}" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a>
                            </div>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-item nav-link"><i class="fas fa-sign-in-alt me-1"></i>Connexion</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>
</div>

