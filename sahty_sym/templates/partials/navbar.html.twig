        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(20px) saturate(180%);
        box-shadow: 0 8px 32px rgba(29, 93, 155, 0.12);
        padding: 15px 0;
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(117, 194, 246, 0.2);
    }

    .sahty-navbar.scrolled {
        padding: 10px 0;
        box-shadow: 0 12px 40px rgba(29, 93, 155, 0.18);
    }

    /* Logo */
    .navbar-brand {
        transition: all 0.3s ease;
    }

    .navbar-brand:hover {
        transform: scale(1.05);
    }

    .navbar-brand h1 {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
