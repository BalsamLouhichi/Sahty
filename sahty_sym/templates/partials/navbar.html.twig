            transform: translateY(-20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .dropdown-menu::before {
        content: '';
        position: absolute;
        top: -8px;
        right: 30px;
        width: 16px;
        height: 16px;
        background: white;
        border-left: 2px solid rgba(117, 194, 246, 0.2);
        border-top: 2px solid rgba(117, 194, 246, 0.2);
