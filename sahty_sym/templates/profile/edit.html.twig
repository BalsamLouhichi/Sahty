    <script>
        // Animation fade-in au chargement
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.fade-in').forEach(el => {
                el.classList.add('visible');
            });
        });

        // Aperçu de l'image avant upload
        document.getElementById('{{ form.photoProfil.vars.id }}')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const avatar = document.querySelector('.profile-avatar, .profile-avatar-icon');
                    if (avatar) {
                        if (avatar.classList.contains('profile-avatar-icon')) {
                            // Remplacer l'icône par une image
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'profile-avatar';
                            avatar.parentNode.replaceChild(img, avatar);
                        } else {
                            avatar.src = e.target.result;
                        }
                    }
                }
                reader.readAsDataURL(file);
            }
        });

        console.log('✏️ SAHTY - Page d\'édition de profil premium chargée avec succès!');
    </script>
