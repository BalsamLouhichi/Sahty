        </div>
    </nav>

    <div class="container profile-container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Messages flash -->
                {% for message in app.flashes('success') %}
                    <div class="alert-custom alert-success d-flex align-items-center fade-in">
                        <i class="fas fa-check-circle me-3 fs-4"></i>
                        <span>{{ message }}</span>
                        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
                
                {% for message in app.flashes('error') %}
                    <div class="alert-custom alert-danger d-flex align-items-center fade-in">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <span>{{ message }}</span>
                        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <!-- Carte de profil BALSAM avec INFOS MARAM -->
                <div class="profile-card fade-in">
                    <div class="profile-header text-center">
                        <div class="profile-avatar-wrapper">
                            {% if user.photoProfil %}
                                <img src="{{ asset(user.photoProfil) }}" class="profile-avatar" alt="Photo de profil">
                            {% else %}
                                <div class="profile-avatar-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                            {% endif %}
                        </div>
                        
                        <h1 class="profile-name">{{ user.prenom }} {{ user.nom }}</h1>
                        <div class="profile-email">
                            <i class="fas fa-envelope"></i>
                            {{ user.email }}
                        </div>
                        
                        <div class="role-badge">
                            {% if user.role == 'medecin' %}
                                <i class="fas fa-user-md"></i> M√âDECIN
                            {% elseif user.role == 'patient' %}
                                <i class="fas fa-user-injured"></i> PATIENT
                            {% elseif user.role == 'responsable_labo' %}
                                <i class="fas fa-flask"></i> RESPONSABLE LABORATOIRE
                            {% elseif user.role == 'responsable_para' %}
                                <i class="fas fa-pills"></i> RESPONSABLE PHARMACIE
                            {% else %}
                                {{ user.role|upper }}
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="info-grid">
                        <div class="row g-4">
                            <!-- Informations personnelles (TOUS LES D√âTAILS MARAM) -->
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="info-card-header">
                                        <div class="info-card-icon icon-id">
                                            <i class="fas fa-id-card"></i>
                                        </div>
                                        <h3 class="info-card-title">Informations personnelles</h3>
                                    </div>
                                    <div class="info-card-body">
                                        <div class="info-item">
                                            <div class="info-item-icon">
                                                <i class="fas fa-phone"></i>
                                            </div>
                                            <div class="info-item-content">
                                                <div class="info-item-label">T√©l√©phone</div>
                                                <div class="info-item-value">{{ user.telephone ?: 'Non renseign√©' }}</div>
                                            </div>
                                        </div>
                                        
                                        {% if user.dateNaissance %}
                                        <div class="info-item">
                                            <div class="info-item-icon">
                                                <i class="fas fa-calendar"></i>
                                            </div>
                                            <div class="info-item-content">
                                                <div class="info-item-label">Date de naissance</div>
                                                <div class="info-item-value">
                                                    {{ user.dateNaissance|date('d/m/Y') }}
                                                    {% if user.role == 'patient' and user.age %}
                                                        <small>({{ user.age }} ans)</small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        {% endif %}
                                        
                                        <div class="info-item">
                                            <div class="info-item-icon">
                                                <i class="fas fa-clock"></i>
                                            </div>
                                            <div class="info-item-content">
                                                <div class="info-item-label">Membre depuis</div>
                                                <div class="info-item-value">{{ user.creeLe|date('d/m/Y') }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Informations sp√©cifiques au r√¥le (TOUS LES D√âTAILS MARAM) -->
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="info-card-header">
                                        <div class="info-card-icon 
                                            {% if user.role == 'medecin' %}icon-medecin
                                            {% elseif user.role == 'patient' %}icon-patient
                                            {% elseif user.role == 'responsable_labo' %}icon-labo
                                            {% elseif user.role == 'responsable_para' %}icon-para
                                            {% else %}icon-id{% endif %}">
                                            {% if user.role == 'medecin' %}
                                                <i class="fas fa-user-md"></i>
                                            {% elseif user.role == 'patient' %}
                                                <i class="fas fa-user-injured"></i>
                                            {% elseif user.role == 'responsable_labo' %}
                                                <i class="fas fa-flask"></i>
                                            {% elseif user.role == 'responsable_para' %}
                                                <i class="fas fa-pills"></i>
                                            {% else %}
                                                <i class="fas fa-user-tag"></i>
                                            {% endif %}
                                        </div>
                                        <h3 class="info-card-title">
                                            {% if user.role == 'medecin' %}Informations professionnelles
                                            {% elseif user.role == 'patient' %}Informations de sant√©
                                            {% elseif user.role == 'responsable_labo' %}Laboratoire
                                            {% elseif user.role == 'responsable_para' %}Pharmacie
                                            {% endif %}
                                        </h3>
                                    </div>
                                    <div class="info-card-body">
                                        {% if user.role == 'medecin' %}
                                            <!-- TOUS LES CHAMPS M√âDECIN DE MARAM -->
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-stethoscope"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">Sp√©cialit√©</div>
                                                    <div class="info-item-value">{{ user.specialite ?: 'Non renseign√©e' }}</div>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-briefcase"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">Exp√©rience</div>
                                                    <div class="info-item-value">{{ user.anneeExperience ? user.anneeExperience ~ ' ans' : 'Non renseign√©e' }}</div>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-graduation-cap"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">Grade</div>
                                                    <div class="info-item-value">{{ user.grade ?: 'Non renseign√©' }}</div>
                                                </div>
                                            </div>
                                            {% if user.adresseCabinet %}
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">Adresse cabinet</div>
                                                    <div class="info-item-value">{{ user.adresseCabinet }}</div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            {% if user.telephoneCabinet %}
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-phone-alt"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">T√©l√©phone cabinet</div>
                                                    <div class="info-item-value">{{ user.telephoneCabinet }}</div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            {% if user.nomEtablissement %}
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-hospital"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">√âtablissement</div>
                                                    <div class="info-item-value">{{ user.nomEtablissement }}</div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            {% if user.numeroUrgence %}
                                            <div class="info-item">
                                                <div class="info-item-icon">
                                                    <i class="fas fa-ambulance"></i>
                                                </div>
                                                <div class="info-item-content">
                                                    <div class="info-item-label">Num√©ro urgence</div>
                                                    <div class="info-item-value">{{ user.numeroUrgence }}</div>
                                                </div>
                                            </div>
