    <style>
        :root {
            --primary: #1D5D9B;
            --primary-light: #E8F4F8;
            --primary-dark: #163A5F;
            --secondary: #304D30;
            --accent: #75C2F6;
            --light: #F4F6FF;
            --dark: #1A2332;
            --success: #4A7C59;
            --danger: #C1666B;
            --warning: #D4A574;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--light) 0%, #ffffff 100%);
            min-height: 100vh;
        }

        /* ============ NAVBAR PERSONNALISÉE ============ */
        .profile-navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            box-shadow: 0 8px 32px rgba(29, 93, 155, 0.12);
            padding: 15px 0;
            border-bottom: 1px solid rgba(117, 194, 246, 0.2);
        }

        .profile-navbar .navbar-brand {
            font-size: 2rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .profile-navbar .navbar-brand i {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 2px 8px rgba(29, 93, 155, 0.3));
        }

        .profile-navbar .dropdown-toggle {
            color: var(--dark);
            font-weight: 600;
            padding: 10px 18px;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .profile-navbar .dropdown-toggle:hover {
            color: var(--primary);
            background: var(--primary-light);
        }

        .profile-navbar .dropdown-menu {
            border: none;
            border-radius: 20px;
            padding: 15px 0;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            box-shadow: 0 20px 60px rgba(29, 93, 155, 0.2);
            border: 2px solid rgba(117, 194, 246, 0.2);
            margin-top: 15px;
        }

        .profile-navbar .dropdown-item {
            padding: 12px 25px;
            font-weight: 600;
            color: var(--dark);
            transition: all 0.3s ease;
            border-radius: 12px;
            margin: 3px 10px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .profile-navbar .dropdown-item:hover {
            background: linear-gradient(135deg, var(--primary-light) 0%, rgba(117, 194, 246, 0.15) 100%);
            color: var(--primary);
            transform: translateX(5px);
        }

        .profile-navbar .dropdown-item i {
            width: 22px;
            opacity: 0.7;
        }

        .profile-navbar .dropdown-item.text-danger:hover {
            background: rgba(193, 102, 107, 0.1);
            color: var(--danger) !important;
        }

        /* ============ CARTE DE PROFIL ============ */
        .profile-container {
            padding: 50px 0;
        }

        .profile-card {
            border: none;
            border-radius: 30px;
            background: white;
            box-shadow: 0 25px 60px rgba(29, 93, 155, 0.15);
            overflow: hidden;
            border: 2px solid rgba(117, 194, 246, 0.2);
            transition: all 0.3s ease;
        }

        .profile-card:hover {
            box-shadow: 0 30px 70px rgba(29, 93, 155, 0.2);
        }

        .profile-header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            padding: 60px 0;
            position: relative;
            overflow: hidden;
        }

        .profile-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: headerGlow 8s ease-in-out infinite;
        }

        @keyframes headerGlow {
            0%, 100% { transform: translate(0, 0); }
            50% { transform: translate(10%, 10%); }
        }

        .profile-avatar-wrapper {
            position: relative;
            display: inline-block;
        }

        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid white;
            object-fit: cover;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            position: relative;
            z-index: 2;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
            border-color: var(--accent);
        }

        .profile-avatar-icon {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: white;
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .role-badge {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .role-badge i {
            font-size: 1.2rem;
        }

        .profile-name {
            font-size: 2.5rem;
            font-weight: 900;
            color: white;
            margin: 15px 0 10px;
            text-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .profile-email {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        /* ============ CARTES D'INFORMATION ============ */
        .info-grid {
            padding: 40px;
        }

        .info-card {
            height: 100%;
            border: 2px solid rgba(117, 194, 246, 0.2);
            border-radius: 20px;
            background: white;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .info-card:hover {
            border-color: var(--accent);
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(29, 93, 155, 0.1);
        }

        .info-card-header {
            background: linear-gradient(135deg, var(--primary-light) 0%, rgba(117, 194, 246, 0.1) 100%);
            padding: 20px;
            border-bottom: 2px solid rgba(117, 194, 246, 0.2);
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .info-card-icon {
            width: 50px;
            height: 50px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }

        .icon-id { background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%); }
        .icon-medecin { background: linear-gradient(135deg, #4A7C59 0%, #8BC34A 100%); }
        .icon-patient { background: linear-gradient(135deg, #1D5D9B 0%, #75C2F6 100%); }
        .icon-labo { background: linear-gradient(135deg, #D4A574 0%, #FFC107 100%); }
        .icon-para { background: linear-gradient(135deg, #C1666B 0%, #E91E63 100%); }

        .info-card-title {
            font-size: 1.2rem;
            font-weight: 800;
            color: var(--dark);
            margin: 0;
        }

        .info-card-body {
            padding: 25px;
        }

        .info-item {
            padding: 15px 0;
            border-bottom: 1px solid rgba(117, 194, 246, 0.2);
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-item-icon {
            width: 35px;
            height: 35px;
            background: var(--primary-light);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 1rem;
        }

        .info-item-content {
            flex: 1;
        }

        .info-item-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--primary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .info-item-value {
            font-size: 1rem;
            font-weight: 600;
            color: var(--dark);
            line-height: 1.5;
        }

        .info-item-value small {
            font-size: 0.9rem;
            font-weight: 400;
            color: #666;
        }

        /* ============ BADGES ============ */
        .badge-custom {
            padding: 5px 15px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-block;
        }

        .badge-success { background: var(--primary-light); color: var(--success); }
        .badge-info { background: var(--primary-light); color: var(--primary); }
        .badge-warning { background: rgba(212, 165, 116, 0.2); color: var(--warning); }

        /* ============ DOCUMENTS ============ */
        .document-card {
            background: var(--primary-light);
            border-radius: 15px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 20px;
            border: 2px solid rgba(117, 194, 246, 0.2);
        }

        .document-icon {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: var(--danger);
        }

        .document-info {
            flex: 1;
        }

        .document-title {
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .document-action {
            display: flex;
            gap: 10px;
        }

        .btn-document {
            background: white;
            color: var(--primary);
            border: 2px solid rgba(117, 194, 246, 0.3);
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-document:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        /* ============ BOUTONS D'ACTION ============ */
        .profile-actions {
            padding: 30px 40px 40px;
            background: linear-gradient(135deg, var(--light) 0%, white 100%);
            border-top: 2px solid rgba(117, 194, 246, 0.2);
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 15px 35px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            border: none;
            cursor: pointer;
        }

        .btn-primary-action {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            box-shadow: 0 8px 25px rgba(29, 93, 155, 0.3);
        }

        .btn-primary-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(29, 93, 155, 0.4);
            color: white;
        }

        .btn-outline-action {
            background: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
        }

        .btn-outline-action:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }

        /* ============ ALERTES ============ */
        .alert-custom {
            border-radius: 15px;
            border: none;
            border-left: 4px solid;
            padding: 15px 25px;
            margin-bottom: 20px;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .alert-success {
            border-left-color: var(--success);
        }

        .alert-success i { color: var(--success); }

        .alert-danger {
            border-left-color: var(--danger);
        }

        .alert-danger i { color: var(--danger); }

        /* ============ ANIMATIONS ============ */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* ============ RESPONSIVE ============ */
        @media (max-width: 768px) {
            .profile-name {
                font-size: 1.8rem;
            }
            
            .info-grid {
                padding: 20px;
            }
            
            .profile-actions {
                flex-direction: column;
                align-items: stretch;
            }
            
            .btn-action {
                text-align: center;
                justify-content: center;
            }
            
            .document-card {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
</head>

