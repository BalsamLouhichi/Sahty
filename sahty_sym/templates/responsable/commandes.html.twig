{# templates/backoffice/responsable/commandes.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des commandes - {{ parapharmacie.nom }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: linear-gradient(135deg, #0dcaf0 0%, #0a9ec7 100%);
            color: white;
            padding: 20px 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 0 20px 20px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 20px;
        }

        .sidebar-brand a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: block;
            padding: 12px 20px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s;
        }

        .sidebar-menu a:hover {
            background: rgba(255,255,255,0.1);
            color: white;
        }

        .sidebar-menu a i {
            width: 25px;
            margin-right: 10px;
        }

        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Messages flash */
        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        /* Table */
        .table {
            border-radius: 15px;
            overflow: hidden;
        }

        .table thead th {
            border-bottom: none;
            background-color: #f8f9fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            color: #6c757d;
        }

        .badge {
            padding: 8px 12px;
            border-radius: 30px;
            font-weight: 500;
        }

        .btn-outline-primary {
            border-radius: 8px;
            padding: 5px 10px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .main-content {
                margin-left: 0;
            }
        }

        /* Header dans main content */
        .page-header {
            margin-bottom: 30px;
        }

        .page-header h1 {
            color: #343a40;
            font-weight: 600;
        }

        .page-header p {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <a href="{{ path('app_responsable_dashboard') }}">
                <i class="fas fa-clinic-medical me-2"></i>sahty - {{ parapharmacie.nom }}
            </a>
        </div>
        
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_responsable_dashboard') }}">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_produits') }}">
                    <i class="fas fa-boxes"></i>Produits
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_commandes') }}">
                    <i class="fas fa-shopping-cart"></i>Commandes
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_statistiques') }}">
                    <i class="fas fa-chart-line"></i>Statistiques
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_parametres') }}">
                    <i class="fas fa-cog"></i>Paramètres
                </a>
            </li>
            <li>
                <a href="{{ path('app_home') }}" target="_blank">
                    <i class="fas fa-external-link-alt"></i>Voir le site
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Messages flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Contenu principal -->
        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col-md-8">
                    <h1><i class="fas fa-shopping-cart me-2"></i>Gestion des commandes</h1>
                    <p class="text-muted">{{ parapharmacie.nom }}</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_responsable_commandes', {'statut': 'tous'}) }}" class="btn btn-outline-primary {{ statutActuel == 'tous' ? 'active' : '' }}">Toutes</a>
                        <a href="{{ path('app_responsable_commandes', {'statut': 'en_attente'}) }}" class="btn btn-outline-warning {{ statutActuel == 'en_attente' ? 'active' : '' }}">En attente</a>
                        <a href="{{ path('app_responsable_commandes', {'statut': 'confirmee'}) }}" class="btn btn-outline-info {{ statutActuel == 'confirmee' ? 'active' : '' }}">Confirmées</a>
                        <a href="{{ path('app_responsable_commandes', {'statut': 'livree'}) }}" class="btn btn-outline-success {{ statutActuel == 'livree' ? 'active' : '' }}">Livrées</a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>N° Commande</th>
                                    <th>Date</th>
                                    <th>Client</th>
                                    <th>Produit</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for commande in commandes %}
                                <tr>
                                    <td><strong>#{{ commande.numero }}</strong></td>
                                    <td>{{ commande.dateCreation|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {{ commande.nomClient }}<br>
                                        <small class="text-muted">{{ commande.email }}</small>
                                    </td>
                                    <td>{{ commande.produit.nom }}</td>
                                    <td>{{ commande.quantite }}</td>
                                    <td>{{ commande.prixTotal }} €</td>
                                    <td>
                                        {% set badge_color = {
                                            'en_attente': 'warning',
                                            'confirmee': 'info',
                                            'preparation': 'primary',
                                            'expediee': 'secondary',
                                            'livree': 'success',
                                            'annulee': 'danger'
                                        } %}
                                        <span class="badge bg-{{ badge_color[commande.statut]|default('secondary') }}">
                                            {{ commande.statut|replace({'_': ' '})|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_responsable_commande_details', {'id': commande.id}) }}" 
                                               class="btn btn-sm btn-outline-primary" title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-success dropdown-toggle" 
                                                    data-bs-toggle="dropdown" 
                                                    aria-expanded="false">
                                                Statut
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                        <input type="hidden" name="statut" value="confirmee">
                                                        <button type="submit" class="dropdown-item">Confirmer</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                        <input type="hidden" name="statut" value="preparation">
                                                        <button type="submit" class="dropdown-item">En préparation</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                        <input type="hidden" name="statut" value="expediee">
                                                        <button type="submit" class="dropdown-item">Expédiée</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                        <input type="hidden" name="statut" value="livree">
                                                        <button type="submit" class="dropdown-item">Livrée</button>
                                                    </form>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?');">
                                                        <input type="hidden" name="statut" value="annulee">
                                                        <button type="submit" class="dropdown-item text-danger">Annuler</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center py-5">
                                        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Aucune commande trouvée</p>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>