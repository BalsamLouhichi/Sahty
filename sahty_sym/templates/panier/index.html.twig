<div class="panier-container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="panier-header">
        <h1 class="panier-title">
            <i class="bi bi-cart3 me-2"></i>Mon panier
        </h1>
        <p class="text-muted mb-0">
            {% if panier|length > 0 %}
                Vous avez {{ panier|length }} produit(s) dans votre panier
            {% else %}
                Votre panier est vide
            {% endif %}
        </p>
    </div>

    {% if panier|length > 0 %}
        <div class="row">
            <div class="col-lg-8">
                {% for item in panier %}
                    <div class="panier-item" data-index="{{ loop.index0 }}">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                {% if item.produit_image %}
                                    <img src="{{ asset('uploads/images/produits/' ~ item.produit_image) }}" 
                                         alt="{{ item.produit_nom }}"
                                         class="item-image">
                                {% else %}
                                    <div class="item-image-placeholder">
                                        <i class="bi bi-image" style="font-size: 2rem;"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <div class="item-details">
                                    <h5 class="item-nom">{{ item.produit_nom }}</h5>
                                    <p class="item-pharmacie mb-2">
                                        <i class="bi bi-shop"></i>{{ item.pharmacie_nom }}
                                    </p>
                                    <p class="item-prix mb-0">
                                        {{ item.prix|number_format(2, ',', ' ') }} € / unité
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <form action="{{ path('app_panier_modifier', {'index': loop.index0}) }}" method="post" class="quantite-form">
                                    <div class="quantite-control">
                                        <button type="button" class="btn-quantite" onclick="modifierQuantite({{ loop.index0 }}, -1)">-</button>
                                        <input type="number" 
                                               name="quantite" 
                                               value="{{ item.quantite }}" 
                                               min="1" 
                                               max="99"
                                               class="quantite-input"
                                               id="quantite-{{ loop.index0 }}"
                                               onchange="mettreAJourQuantite({{ loop.index0 }})">
                                        <button type="button" class="btn-quantite" onclick="modifierQuantite({{ loop.index0 }}, 1)">+</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-2">
                                <div class="item-total">
                                    {{ (item.prix * item.quantite)|number_format(2, ',', ' ') }} €
                                </div>
                            </div>
                            <div class="col-md-1 text-end">
                                <a href="{{ path('app_panier_supprimer', {'index': loop.index0}) }}" 
                                   class="btn-supprimer"
                                   onclick="return confirm('Supprimer cet article du panier ?')">
                                    <i class="bi bi-trash fs-5"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_parapharmacie_list') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Continuer mes achats
                    </a>
                    <a href="{{ path('app_panier_vider') }}" class="btn btn-outline-danger" 
                       onclick="return confirm('Vider le panier ?')">
                        <i class="bi bi-trash me-2"></i>Vider le panier
                    </a>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="panier-recap">
                    <h4 class="recap-title">Récapitulatif</h4>
                    
                    <div class="recap-ligne">
                        <span>Sous-total</span>
                        <span class="fw-bold">{{ total|number_format(2, ',', ' ') }} €</span>
                    </div>
                    
                    <div class="recap-ligne">
                        <span>Frais de livraison</span>
                        <span class="text-success">Gratuit</span>
                    </div>
                    
                    <div class="recap-total">
                        {{ total|number_format(2, ',', ' ') }} €
                    </div>
                    
                    <a href="{{ path('app_commande_formulaire_panier') }}" class="btn-commander">
                        <i class="bi bi-cart-check me-2"></i>Commander
                    </a>
                    
                    <a href="{{ path('app_parapharmacie_list') }}" class="btn-continuer">
                        <i class="bi bi-shop me-2"></i>Continuer mes achats
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="panier-vide">
            <i class="bi bi-cart-x"></i>
            <h3>Votre panier est vide</h3>
            <p class="text-muted mb-4">Découvrez nos produits et commencez vos achats</p>
            <a href="{{ path('app_parapharmacie_list') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-shop me-2"></i>Voir les produits
            </a>
        </div>
    {% endif %}
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function modifierQuantite(index, changement) {
            const input = document.getElementById('quantite-' + index);
            let nouvelleValeur = parseInt(input.value) + changement;
            
            if (nouvelleValeur < 1) nouvelleValeur = 1;
            if (nouvelleValeur > 99) nouvelleValeur = 99;
            
            input.value = nouvelleValeur;
            
            // Soumettre le formulaire
            const form = input.closest('.quantite-form');
            form.submit();
        }
        
        function mettreAJourQuantite(index) {
            const input = document.getElementById('quantite-' + index);
            let valeur = parseInt(input.value);
            
            if (isNaN(valeur) || valeur < 1) valeur = 1;
            if (valeur > 99) valeur = 99;
            
            input.value = valeur;
            
            // Soumettre le formulaire
            const form = input.closest('.quantite-form');
            form.submit();
        }
    </script>
{% endblock %}