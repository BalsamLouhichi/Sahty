{# templates/backoffice/responsable/commande_details.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails de la commande #{{ commande.numero }} - {{ parapharmacie.nom }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: linear-gradient(135deg, #0dcaf0 0%, #0a9ec7 100%);
            color: white;
            padding: 20px 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 0 20px 20px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 20px;
        }

        .sidebar-brand a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: block;
            padding: 12px 20px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s;
        }

        .sidebar-menu a:hover {
            background: rgba(255,255,255,0.1);
            color: white;
        }

        .sidebar-menu a i {
            width: 25px;
            margin-right: 10px;
        }

        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Messages flash */
        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .badge {
            padding: 8px 12px;
            border-radius: 30px;
            font-weight: 500;
        }

        .btn-primary {
            background: linear-gradient(135deg, #0dcaf0 0%, #0a9ec7 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0a9ec7 0%, #0dcaf0 100%);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <a href="{{ path('app_responsable_dashboard') }}">
                <i class="fas fa-clinic-medical me-2"></i>sahty - {{ parapharmacie.nom }}
            </a>
        </div>
        
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_responsable_dashboard') }}">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_produits') }}">
                    <i class="fas fa-boxes"></i>Produits
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_commandes') }}">
                    <i class="fas fa-shopping-cart"></i>Commandes
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_statistiques') }}">
                    <i class="fas fa-chart-line"></i>Statistiques
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_parametres') }}">
                    <i class="fas fa-cog"></i>Paramètres
                </a>
            </li>
            <li>
                <a href="{{ path('app_home') }}" target="_blank">
                    <i class="fas fa-external-link-alt"></i>Voir le site
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Messages flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Contenu principal -->
        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col">
                    <h1><i class="fas fa-file-invoice me-2"></i>Détails de la commande #{{ commande.numero }}</h1>
                    <p class="text-muted">{{ parapharmacie.nom }}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Informations de la commande</h5>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tr>
                                    <th style="width: 200px;">Numéro de commande</th>
                                    <td><strong>#{{ commande.numero }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Date de création</th>
                                    <td>{{ commande.dateCreation|date('d/m/Y H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière modification</th>
                                    <td>{{ commande.dateModification ? commande.dateModification|date('d/m/Y H:i:s') : '-' }}</td>
                                </tr>
                                <tr>
                                    <th>Statut actuel</th>
                                    <td>
                                        {% set badge_color = {
                                            'en_attente': 'warning',
                                            'confirmee': 'info',
                                            'preparation': 'primary',
                                            'expediee': 'secondary',
                                            'livree': 'success',
                                            'annulee': 'danger'
                                        } %}
                                        <span class="badge bg-{{ badge_color[commande.statut]|default('secondary') }} fs-6">
                                            {{ commande.statut|replace({'_': ' '})|capitalize }}
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Détails du produit</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 text-center">
                                    {% if commande.produit.image %}
                                        <img src="{{ asset('uploads/images/produits/' ~ commande.produit.image) }}" 
                                             alt="{{ commande.produit.nom }}"
                                             class="img-fluid rounded"
                                             style="max-height: 150px;">
                                    {% else %}
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                             style="height: 150px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-md-9">
                                    <table class="table">
                                        <tr>
                                            <th style="width: 150px;">Produit</th>
                                            <td><strong>{{ commande.produit.nom }}</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Référence</th>
                                            <td>{{ commande.produit.reference }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prix unitaire</th>
                                            <td>{{ commande.prixUnitaire }} €</td>
                                        </tr>
                                        <tr>
                                            <th>Quantité commandée</th>
                                            <td>{{ commande.quantite }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prix total</th>
                                            <td><strong class="text-primary">{{ commande.prixTotal }} €</strong></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Informations client</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Nom :</strong> {{ commande.nomClient }}</p>
                            <p><strong>Email :</strong> {{ commande.email }}</p>
                            <p><strong>Téléphone :</strong> {{ commande.telephone }}</p>
                            <p><strong>Adresse de livraison :</strong><br>
                            {{ commande.adresseLivraison|nl2br }}</p>
                            {% if commande.notes %}
                                <p><strong>Notes :</strong><br>
                                {{ commande.notes|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_responsable_commandes') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour aux commandes
                                </a>
                                
                                {% if commande.statut != 'livree' and commande.statut != 'annulee' %}
                                    <div class="dropdown">
                                        <button class="btn btn-primary w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-sync-alt me-2"></i>Changer le statut
                                        </button>
                                        <ul class="dropdown-menu w-100">
                                            {% if commande.statut != 'confirmee' %}
                                            <li>
                                                <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                    <input type="hidden" name="statut" value="confirmee">
                                                    <button type="submit" class="dropdown-item">Confirmer</button>
                                                </form>
                                            </li>
                                            {% endif %}
                                            {% if commande.statut != 'preparation' %}
                                            <li>
                                                <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                    <input type="hidden" name="statut" value="preparation">
                                                    <button type="submit" class="dropdown-item">En préparation</button>
                                                </form>
                                            </li>
                                            {% endif %}
                                            {% if commande.statut != 'expediee' %}
                                            <li>
                                                <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                    <input type="hidden" name="statut" value="expediee">
                                                    <button type="submit" class="dropdown-item">Expédiée</button>
                                                </form>
                                            </li>
                                            {% endif %}
                                            {% if commande.statut != 'livree' %}
                                            <li>
                                                <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}">
                                                    <input type="hidden" name="statut" value="livree">
                                                    <button type="submit" class="dropdown-item">Livrée</button>
                                                </form>
                                            </li>
                                            {% endif %}
                                            {% if commande.statut != 'annulee' and commande.statut != 'livree' %}
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form method="post" action="{{ path('app_responsable_commande_statut', {'id': commande.id}) }}"
                                                      onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?');">
                                                    <input type="hidden" name="statut" value="annulee">
                                                    <button type="submit" class="dropdown-item text-danger">Annuler</button>
                                                </form>
                                            </li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>