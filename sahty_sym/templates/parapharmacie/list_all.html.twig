<!-- Products Section Start -->
<div class="container-fluid products-section">
    <div class="container">
        <div class="products-header">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Nouveautés</h5>
            <h1 class="display-6 mt-3">Produits Recommandés</h1>
            <p class="mb-0 fs-5">Découvrez nos meilleures offres et produits populaires</p>
        </div>
        
        <div class="row" id="productsContainer">
            {% for prod in produits %}
            <div class="col-lg-3 col-md-6 product-item" 
                 data-name="{{ prod.nom|lower }}" 
                 data-brand="{{ prod.marque|default('')|lower }}" 
                 data-tags="{{ prod.categorie|default('')|lower }} {{ prod.type|default('')|lower }}"
                 data-description="{{ prod.description|default('')|lower }}"
                 style="--item-index: {{ loop.index0 % 8 }};">
                <div class="product-card">
                    {% if prod.estNouveau is defined and prod.estNouveau %}
                    <div class="product-badge">NOUVEAU</div>
                    {% elseif prod.estPopulaire is defined and prod.estPopulaire %}
                    <div class="product-badge">POPULAIRE</div>
                    {% endif %}
                    
                    <div class="product-price">{{ prod.prix }} €</div>
                    
                    <div class="product-image">
                        {% if prod.image is defined and prod.image %}
                        <img src="{{ asset('uploads/images/produits/' ~ prod.image) }}" alt="{{ prod.nom }}">
                        {% else %}
                        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" alt="{{ prod.nom }}">
                        {% endif %}
                    </div>
                    
                    <div class="product-content">
                        {% if prod.marque is defined and prod.marque %}
                        <div class="product-brand">{{ prod.marque }}</div>
                        {% endif %}
                        
                        <div class="product-title">{{ prod.nom }}</div>
                        
                        {% if prod.categorie is defined and prod.categorie %}
                        <div class="product-tags">
                            <span class="product-tag">{{ prod.categorie|upper }}</span>
                            {% if prod.type is defined and prod.type %}
                            <span class="product-tag">{{ prod.type|upper }}</span>
                            {% endif %}
                        </div>
                        {% endif %}
                        
                        <div class="product-short-description">
                            {{ prod.description|slice(0, 80) ~ (prod.description|length > 80 ? '...' : '') }}
                        </div>
                        
                        <div class="product-full-description" id="description-{{ prod.id }}">
                            {{ prod.description }}
                        </div>
                        
                        <div class="product-actions">
                            <a href="{{ path('app_produit_details', {'id': prod.id}) }}" class="btn-description">
                                <i class="fas fa-info-circle"></i>
                                <span>Description</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <div class="no-results">
                    <i class="fas fa-box-open fa-3x mb-3" style="color: #ccc;"></i>
                    <h4>Aucun produit disponible</h4>
                    <p>Les produits seront bientôt ajoutés</p>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <!-- Message aucun résultat -->
        <div class="no-results" id="noResultsMessage" style="display: none;">
            <i class="fas fa-search fa-3x mb-3" style="color: #ccc;"></i>
            <h4>Aucun produit trouvé</h4>
            <p>Essayez avec d'autres termes de recherche comme "sommeil", "vitamines" ou "soin"</p>
        </div>
    </div>
</div>
<!-- Products Section End -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function(){
            // Initialiser le compteur de produits
            const totalProducts = {{ produits|length }};
            $('#resultsCount').text(`${totalProducts} produit${totalProducts !== 1 ? 's' : ''} trouvé${totalProducts !== 1 ? 's' : ''}`);
            
            // Animation des produits
            $('.product-item').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
            });
            
            // Fonction de recherche
            function searchProducts() {
                const searchTerm = $('#productSearch').val().toLowerCase().trim();
                let visibleCount = 0;
                
                $('.product-item').each(function() {
                    const productName = $(this).data('name').toLowerCase();
                    const productBrand = $(this).data('brand').toLowerCase();
                    const productTags = $(this).data('tags').toLowerCase();
                    const productDescription = $(this).data('description').toLowerCase();
                    
                    if (searchTerm === '' || 
                        productName.includes(searchTerm) || 
                        productBrand.includes(searchTerm) || 
                        productTags.includes(searchTerm) || 
                        productDescription.includes(searchTerm)) {
                        $(this).removeClass('hidden').show();
                        visibleCount++;
                        $(this).find('.product-card').removeClass('highlight');
                        if (searchTerm !== '') {
                            $(this).find('.product-card').addClass('highlight');
                        }
                    } else {
                        $(this).addClass('hidden').hide();
                    }
                });
                
                // Mettre à jour le compteur de résultats
                $('#resultsCount').text(`${visibleCount} produit${visibleCount !== 1 ? 's' : ''} trouvé${visibleCount !== 1 ? 's' : ''}`);
                
                // Afficher/masquer le message "aucun résultat"
                if (visibleCount === 0 && searchTerm !== '') {
                    $('#noResultsMessage').show();
                } else {
                    $('#noResultsMessage').hide();
                }
            }
            
            // Recherche en temps réel
            $('#productSearch').on('input', function() {
                searchProducts();
            });
            
            // Recherche au clic sur le bouton
            $('#searchButton').click(function() {
                searchProducts();
            });
            
            // Recherche avec la touche Entrée
            $('#productSearch').keypress(function(e) {
                if (e.which === 13) {
                    searchProducts();
                }
            });
            
            // Effacer la recherche au double-clic
            $('#productSearch').on('dblclick', function() {
                $(this).val('');
                searchProducts();
            });
            
            // Scroll horizontal des parapharmacies
            const scrollWrapper = document.getElementById('pharmaciesScroll');
            const scrollLeftBtn = document.getElementById('scrollLeft');
            const scrollRightBtn = document.getElementById('scrollRight');
            const scrollAmount = 300;
            
            // Vérifier si les éléments existent
            if (scrollWrapper && scrollLeftBtn && scrollRightBtn) {
                
                // Fonction pour vérifier et mettre à jour l'état des boutons
                function updateScrollButtons() {
                    const maxScrollLeft = scrollWrapper.scrollWidth - scrollWrapper.clientWidth;
                    
                    // Bouton gauche - désactivé si au début
                    if (scrollWrapper.scrollLeft <= 5) {
                        scrollLeftBtn.disabled = true;
                        scrollLeftBtn.style.opacity = '0.5';
                    } else {
                        scrollLeftBtn.disabled = false;
                        scrollLeftBtn.style.opacity = '1';
                    }
                    
                    // Bouton droit - désactivé si à la fin
                    if (scrollWrapper.scrollLeft >= maxScrollLeft - 5) {
                        scrollRightBtn.disabled = true;
                        scrollRightBtn.style.opacity = '0.5';
                    } else {
                        scrollRightBtn.disabled = false;
                        scrollRightBtn.style.opacity = '1';
                    }
                    
                    // Cacher complètement les boutons si pas assez d'éléments
                    if (scrollWrapper.scrollWidth <= scrollWrapper.clientWidth) {
                        scrollLeftBtn.style.display = 'none';
                        scrollRightBtn.style.display = 'none';
                    } else {
                        scrollLeftBtn.style.display = 'flex';
                        scrollRightBtn.style.display = 'flex';
                    }
                }
                
                // Scroll vers la gauche
                scrollLeftBtn.addEventListener('click', () => {
                    scrollWrapper.scrollBy({
                        left: -scrollAmount,
                        behavior: 'smooth'
                    });
                    setTimeout(updateScrollButtons, 300);
                });
                
                // Scroll vers la droite
                scrollRightBtn.addEventListener('click', () => {
                    scrollWrapper.scrollBy({
                        left: scrollAmount,
                        behavior: 'smooth'
                    });
                    setTimeout(updateScrollButtons, 300);
                });
                
                // Mettre à jour les boutons lors du scroll
                scrollWrapper.addEventListener('scroll', updateScrollButtons);
                
                // Mettre à jour les boutons au redimensionnement de la fenêtre
                window.addEventListener('resize', updateScrollButtons);
                
                // Initialiser l'état des boutons
                setTimeout(updateScrollButtons, 100);
                
                // Navigation au clavier
                document.addEventListener('keydown', (e) => {
                    // Vérifier que l'utilisateur n'est pas en train de taper dans un champ de recherche
                    if (document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA') {
                        if (e.key === 'ArrowLeft') {
                            e.preventDefault();
                            scrollWrapper.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
                        } else if (e.key === 'ArrowRight') {
                            e.preventDefault();
                            scrollWrapper.scrollBy({ left: scrollAmount, behavior: 'smooth' });
                        }
                    }
                });
            } else {
                console.log('Éléments de scroll non trouvés');
            }
        });
    </script>
{% endblock %}