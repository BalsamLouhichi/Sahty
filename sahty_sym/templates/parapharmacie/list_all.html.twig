<div class="container-fluid py-5 bg-light" style="padding-top: 0.5rem !important;">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Parapharmacies</h5>
            <h1 class="display-6 mt-3">Les Parapharmacies les Plus Célèbres</h1>
            <p class="mb-4 fs-5">Découvrez les parapharmacies les plus réputées et appréciées par nos patients.</p>
        </div>
        
        <div class="pharmacies-scroll-container">
            <button class="scroll-btn scroll-btn-left" id="scrollLeft" style="display: flex !important;">
                <i class="fas fa-chevron-left"></i>
            </button>
            
            <div class="pharmacies-scroll-wrapper" id="pharmaciesScroll">
                {% for para in parapharmacies %}
                <div class="pharmacy-item">
                    <h5>{{ para.nom }}</h5>
                    <p class="specialite">
                        {% if para.specialite is defined and para.specialite %}
                            {{ para.specialite }}
                        {% else %}
                            Parapharmacie générale
                        {% endif %}
                    </p>
                    <div class="location">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>{{ para.adresse|length > 30 ? para.adresse|slice(0, 30) ~ '...' : para.adresse }}</span>
                    </div>
                    {% if para.telephone %}
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-phone me-1"></i>{{ para.telephone }}
                        </small>
                    </div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
            
            <button class="scroll-btn scroll-btn-right" id="scrollRight" style="display: flex !important;">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
        
        <div class="scroll-indicator">
            <span class="badge" id="pharmacyCount">{{ parapharmacies|length }} parapharmacies disponibles</span>
           
        </div>
    </div>
</div>
