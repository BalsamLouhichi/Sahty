{% extends 'base.html.twig' %}

{% block title %}Liste des parapharmacies{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4 text-center">Liste des parapharmacies</h1>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for p in parapharmacies %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.nom }}</td>
                <td>{{ p.adresse }}</td>
                <td>{{ p.telephone }}</td>
                <td>{{ p.email ?? '—' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune parapharmacie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
