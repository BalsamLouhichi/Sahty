<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>SAHTY - Connexion s√©curis√©e</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #1D5D9B;
            --primary-dark: #163A5F;
            --secondary: #304D30;
            --accent: #75C2F6;
            --light: #F4F6FF;
            --dark: #1A2332;
        }

        body { 
            background: linear-gradient(135deg, var(--light) 0%, #ffffff 100%);
            font-family: 'Inter', 'Roboto', sans-serif;
            min-height: 100vh;
        }

        /* Login Container */
        .login-container { 
            padding: 80px 20px; 
            display: flex; 
            justify-content: center; 
            align-items: center;
            min-height: calc(100vh - 200px);
        }

        .login-card { 
            background: #fff; 
            padding: 50px; 
            border-radius: 30px; 
            width: 100%; 
            max-width: 550px; 
            box-shadow: 0 25px 60px rgba(29, 93, 155, 0.15);
            border: 2px solid rgba(117, 194, 246, 0.2);
            transition: all 0.3s ease;
        }

        .login-card:hover {
            box-shadow: 0 30px 70px rgba(29, 93, 155, 0.2);
        }

        .login-header { 
            text-align: center; 
            margin-bottom: 30px; 
        }

        .login-icon { 
            font-size: 60px; 
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px; 
        }

        .login-header h1 { 
            font-size: 2.2rem; 
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px; 
        }

        .login-header p { 
            color: #6c757d; 
            margin-bottom: 20px; 
        }

        /* Role Tags - De MEDINOVA */
        .role-tags { 
            display: flex; 
            justify-content: center; 
            gap: 10px; 
            flex-wrap: wrap; 
            margin-top: 15px; 
        }

        .role-tag { 
            background: linear-gradient(135deg, var(--primary-light) 0%, rgba(117, 194, 246, 0.1) 100%);
            padding: 8px 15px; 
            border-radius: 25px; 
            font-size: 0.9rem; 
            display: flex; 
            align-items: center; 
            gap: 8px;
            color: var(--primary);
            border: 1px solid rgba(117, 194, 246, 0.3);
            font-weight: 500;
        }

        .role-tag i {
            color: var(--primary);
        }

        /* Formulaire */
        .login-body { 
            margin-top: 20px; 
        }

        .form-group { 
            margin-bottom: 25px; 
            position: relative; 
        }

        .form-group label { 
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
            display: block;
        }

        .form-group label i {
            color: var(--primary);
            margin-right: 8px;
        }

        .input-group-custom { 
            position: relative; 
        }

        .input-group-custom .input-icon { 
            position: absolute; 
            left: 15px; 
            top: 50%; 
            transform: translateY(-50%); 
            color: var(--primary);
            z-index: 10;
        }

        .input-group-custom input { 
            padding-left: 45px; 
            height: 52px;
            border: 2px solid rgba(117, 194, 246, 0.2);
            border-radius: 15px;
            transition: all 0.3s ease;
            width: 100%;
        }

        .input-group-custom input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(29, 93, 155, 0.1);
            outline: none;
        }

        .password-toggle { 
            position: absolute; 
            right: 15px; 
            top: 50%; 
            transform: translateY(-50%); 
            background: none; 
            border: none; 
            color: var(--primary); 
            cursor: pointer;
            z-index: 10;
        }

        .password-toggle:hover {
            color: var(--primary-dark);
        }

        /* Bouton de connexion */
        .btn-login { 
            width: 100%; 
            padding: 15px; 
            border-radius: 50px; 
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: #fff; 
            font-weight: 700;
            font-size: 1.1rem;
            display: flex; 
            justify-content: center; 
            align-items: center; 
            gap: 10px; 
            border: none; 
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            box-shadow: 0 8px 25px rgba(29, 93, 155, 0.3);
        }

        .btn-login:hover { 
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(29, 93, 155, 0.4);
        }

        /* Lien mot de passe oubli√© - DEHORS DU FORMULAIRE (Balsam) */
        .forgot-password-container { 
            text-align: center; 
            margin: 20px 0; 
        }

        .forgot-password-link { 
            color: var(--primary); 
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 25px;
            background: var(--light);
            border-radius: 25px;
            border: 2px solid rgba(117, 194, 246, 0.2);
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .forgot-password-link:hover { 
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(29, 93, 155, 0.2);
            border-color: var(--primary);
        }

        .forgot-password-link i {
            transition: transform 0.3s ease;
        }

        .forgot-password-link:hover i {
            transform: translateX(-3px);
        }

        /* Checkbox "Se souvenir de moi" */
        .form-check {
            margin: 25px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid rgba(117, 194, 246, 0.3);
            border-radius: 5px;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }

        .form-check-label {
            font-weight: 500;
            color: var(--dark);
            cursor: pointer;
        }

        /* Boutons de connexion sociale */
        .social-login { 
            display: flex; 
            flex-direction: column; 
            gap: 12px; 
            margin: 25px 0 15px; 
        }

        .btn-google, .btn-apple {
            display: flex; 
            align-items: center; 
            justify-content: center; 
            gap: 12px; 
            padding: 14px; 
            border-radius: 50px; 
            font-weight: 600; 
            border: none; 
            cursor: pointer; 
            width: 100%;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .btn-google { 
            background: #DB4437; 
            color: #fff; 
        }

        .btn-google:hover { 
            background: #c33d2f; 
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(219, 68, 55, 0.3);
        }

        .btn-apple { 
            background: #000; 
            color: #fff; 
        }

        .btn-apple:hover { 
            background: #333; 
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        /* Lien d'inscription */
        .register-link-container { 
            text-align: center; 
            margin-top: 20px; 
            padding-top: 20px;
            border-top: 2px solid rgba(117, 194, 246, 0.2);
        }

        .register-link-container p {
            color: #6c757d;
            margin-bottom: 10px;
        }

        .register-link { 
            color: var(--primary); 
            text-decoration: none; 
            font-weight: 700;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .register-link:hover { 
            color: var(--primary-dark);
            gap: 12px;
        }

        /* Alertes */
        .alert {
            border-radius: 15px;
            border: none;
            border-left: 4px solid;
            padding: 15px 20px;
            margin-bottom: 20px;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .alert-danger {
            border-left-color: var(--danger, #C1666B);
        }

        .alert-success {
            border-left-color: var(--success, #4A7C59);
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card {
            animation: fadeInUp 0.6s ease forwards;
        }
    </style>
</head>
<body>

    <!-- Navigation - Utilise le partial header existant -->
    {% include 'partials/header.html.twig' %}

    <!-- Login Container -->
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon"><i class="fas fa-lock"></i></div>
                <h1>Connexion s√©curis√©e</h1>
                <p>Acc√©dez √† votre espace personnel SAHTY</p>

                <!-- Role Tags - De MEDINOVA -->
                <div class="role-tags">
                    <span class="role-tag"><i class="fas fa-user-injured"></i> Patient</span>
                    <span class="role-tag"><i class="fas fa-user-md"></i> M√©decin</span>
                    <span class="role-tag"><i class="fas fa-flask"></i> Laboratoire</span>
                    <span class="role-tag"><i class="fas fa-pills"></i> Parapharmacie</span>
                </div>
            </div>

            <div class="login-body">
                <!-- Affichage des messages flash et erreurs -->
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {% if error.messageKey == 'Invalid credentials.' %}
                            Email ou mot de passe incorrect.
                        {% else %}
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        {% endif %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <!-- Formulaire de connexion Symfony (avec ID pour soumission externe) -->
                <form method="post" action="{{ path('app_login') }}" id="loginForm">
                    {# Protection CSRF #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-group">
                        <label for="inputEmail"><i class="fas fa-envelope"></i> Adresse email</label>
                        <div class="input-group-custom">
                            <i class="fas fa-user input-icon"></i>
                            <input type="email" 
                                   name="_username" 
                                   value="{{ last_username|default('') }}" 
                                   required 
                                   autofocus 
                                   class="form-control" 
                                   id="inputEmail" 
                                   placeholder="exemple@sahty.tn">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword"><i class="fas fa-lock"></i> Mot de passe</label>
                        <div class="input-group-custom">
                            <i class="fas fa-key input-icon"></i>
                            <input type="password" 
                                   name="_password" 
                                   required 
                                   class="form-control" 
                                   id="inputPassword" 
                                   placeholder="Votre mot de passe">
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <!-- LIEN "MOT DE PASSE OUBLI√â" - EN DEHORS DU FORMULAIRE (Balsam) -->
                <div class="forgot-password-container">
                    <a href="{{ path('app_forgot_password') }}" 
                       class="forgot-password-link"
                       id="forgotPasswordLink">
                        <i class="fas fa-key me-2"></i>
                        <strong>Mot de passe oubli√© ?</strong>
                    </a>
                </div>

                <!-- Bouton de soumission du formulaire -->
                <div class="submit-button-container">
                    <button type="submit" form="loginForm" class="btn-login">
                        Se connecter <i class="fas fa-sign-in-alt"></i>
                    </button>
                </div>

                <!-- Case √† cocher "Se souvenir de moi" -->
                <div class="form-check">
                    <input type="checkbox" name="_remember_me" value="on" class="form-check-input" id="remember">
                    <label class="form-check-label" for="remember">Se souvenir de moi</label>
                </div>

                <!-- Boutons de connexion sociale (MEDINOVA) -->
                <div class="social-login">
                    <button type="button" class="btn-google"><i class="fab fa-google"></i> Se connecter avec Google</button>
                    <button type="button" class="btn-apple"><i class="fab fa-apple"></i> Se connecter avec Apple</button>
                </div>

                <div class="register-link-container">
                    <p>Nouveau sur SAHTY ?</p>
                    <a href="{{ path('app_signup') }}" class="register-link">
                        Cr√©er un compte gratuit <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Afficher/Masquer le mot de passe
        const togglePassword = document.getElementById('togglePassword');
        if (togglePassword) {
            togglePassword.addEventListener('click', function () {
                const passwordInput = document.getElementById('inputPassword');
                const icon = this.querySelector('i');
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        }

        // S'assurer que le lien "mot de passe oubli√©" fonctionne
        const forgotLink = document.getElementById('forgotPasswordLink');
        if (forgotLink) {
            forgotLink.addEventListener('click', function(e) {
                console.log('Redirection vers la page de r√©cup√©ration de mot de passe');
                // La navigation se fera normalement via l'attribut href
            });
        }

        // Pr√©venir toute soumission accidentelle du formulaire par Enter
        const loginForm = document.getElementById('loginForm');
        if (loginForm) {
            loginForm.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && e.target.tagName !== 'BUTTON') {
                    e.preventDefault();
                    document.querySelector('button[form="loginForm"]').click();
                }
            });

            // Trim email on submit
            loginForm.addEventListener('submit', function(e) {
                const emailInput = document.querySelector('input[name="_username"]');
                if (emailInput) {
                    emailInput.value = emailInput.value.trim();
                }
            });
        }

        // Animation suppl√©mentaire
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîê Page de connexion SAHTY charg√©e avec succ√®s!');
        });
    </script>
</body>
</html>