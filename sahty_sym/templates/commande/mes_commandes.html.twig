<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-list-check me-2"></i>
            Mes commandes
        </h1>
      <a href="{{ path('app_parapharmacie_produits') }}" class="btn btn-outline-cyan">
    <i class="bi bi-cart-plus me-2"></i>Nouvelle commande
</a>
    </div>
    
    <div class="alert alert-info mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-person-circle fs-4 me-3"></i>
            <div>
                <strong>Email :</strong> {{ email }}
               
            </div>
        </div>
    </div>
    
    {% if commandes|length > 0 %}
        <div class="mb-3">
            <span class="badge bg-primary">{{ commandes|length }} commande(s)</span>
        </div>
        
        {% for commande in commandes %}
            <div class="card mb-4 commande-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="d-flex align-items-start mb-3">
                                <div class="me-3">
                                    <div class="bg-light rounded p-2">
                                        <i class="bi bi-receipt text-primary" style="font-size: 2rem;"></i>
                                    </div>
                                </div>
                                <div>
                                    <h5 class="card-title mb-1">
                                        Commande #{{ commande.numero }}
                                    </h5>
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-calendar me-1"></i>
                                        {{ commande.dateCreation|date('d/m/Y H:i') }}
                                    </p>
                                    <p class="mb-1">
                                        <strong>Produit :</strong> {{ commande.produit.nom }}
                                    </p>
                                    <p class="mb-1">
                                        <strong>Parapharmacie :</strong> {{ commande.parapharmacie.nom }}
                                    </p>
                                    <p class="mb-0">
                                        <strong>Total :</strong> 
                                        <span class="text-success fw-bold">
                                            {{ commande.prixTotal|number_format(2, ',', ' ') }} €
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="d-flex flex-column h-100">
                                <div class="mb-3">
                                    <span class="badge bg-{{ commande.statutCouleur }} statut-badge">
                                        {{ commande.statutLibelle }}
                                    </span>
                                </div>
                                
                                <div class="mt-auto">
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_commander_confirmation', {'id': commande.id}) }}" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye me-1"></i>Voir
                                        </a>
                                        {% if commande.statut == 'en_attente' %}
                                            <form method="post" action="{{ path('app_commande_annuler', {'id': commande.id}) }}" 
                                                  style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('annuler-commande') }}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-x-circle me-1"></i>Annuler
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        
        <div class="alert alert-light mt-4">
            <h5 class="alert-heading">
                <i class="bi bi-question-circle me-2"></i>Besoin d'aide ?
            </h5>
            <p class="mb-0">
                Pour toute question concernant vos commandes, contactez directement la parapharmacie concernée.
            </p>
        </div>
        
    {% else %}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
            </div>
            <h3 class="text-muted">Aucune commande trouvée</h3>
            <p class="text-muted mb-4">
                Aucune commande n'a été trouvée pour l'email : <strong>{{ email }}</strong>
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_mes_commandes') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-search me-2"></i>Changer d'email
                </a>
                <a href="{{ path('app_parapharmacie_list') }}" class="btn btn-primary">
                    <i class="bi bi-cart-plus me-2"></i>Faire une commande
                </a>
            </div>
        </div>
    {% endif %}
