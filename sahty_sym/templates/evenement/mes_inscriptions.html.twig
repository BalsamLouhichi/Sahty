    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filter functionality
            const filterTabs = document.querySelectorAll('.filter-badge');
            const inscriptionItems = document.querySelectorAll('.inscription-item');
            
            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    filterTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filter = this.dataset.filter;
                    
                    inscriptionItems.forEach(item => {
                        const statut = item.dataset.statut;
                        
                        if (filter === 'all') {
                            item.style.display = 'block';
                        } else if (filter === 'actives') {
                            item.style.display = (statut === 'confirme' || statut === 'paye') ? 'block' : 'none';
                        } else {
                            item.style.display = (statut === filter) ? 'block' : 'none';
                        }
                    });
                });
            });
            
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    
                    inscriptionItems.forEach(item => {
                        if (searchTerm === '') {
                            item.style.display = 'block';
                            return;
                        }
                        
                        const titre = item.dataset.titre || '';
                        const reference = item.dataset.reference || '';
                        
                        if (titre.includes(searchTerm) || reference.includes(searchTerm)) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                    
                    // Update active filter
                    filterTabs.forEach(t => t.classList.remove('active'));
                    document.querySelector('[data-filter="all"]').classList.add('active');
                });
            }
            
            // Animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            document.querySelectorAll('.inscription-card').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.5s ease';
                observer.observe(card);
            });
        });
    </script>
