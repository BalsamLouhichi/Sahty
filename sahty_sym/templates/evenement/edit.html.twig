<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Modifier l'Événement</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Google Fonts #}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    {# FontAwesome #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">

    {# Bootstrap #}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    {# Flatpickr #}
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">

    {# Main CSS #}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <style>
        /* Formulaire */
        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
            transition: all 0.2s;
        }
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            outline: none;
        }
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            color: #495057;
        }
        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        /* Input group */
        .input-group .form-control, .input-group-text {
            border-radius: 0.5rem;
        }

        /* Erreurs */
        .is-invalid {
            border-color: #dc3545 !important;
        }
        .invalid-feedback {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        /* Boutons */
        .btn-primary, .btn-secondary {
            padding: 0.75rem 2rem;
            font-weight: 600;
            border-radius: 0.5rem;
        }

        /* Card */
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
        .card-body {
            padding: 2rem;
        }

        /* Header */
        .display-6 {
            color: #212529;
        }

        /* Main container */
        .container-fluid.py-5 {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>

<body>

{% include 'partials/header.html.twig' %}

<!-- Main Content -->
<div class="container-fluid py-5">
    <div class="container">

        <!-- Header -->
        <div class="row mb-5">
            <div class="col-md-8">
                <h1 class="display-6 fw-bold mb-3 text-dark">
                    <i class="fas fa-edit text-primary me-2"></i>
                    Modifier l'Événement
                </h1>
                <p class="text-muted mb-0">Mettez à jour les informations de votre événement</p>
            </div>
            <div class="col-md-4 d-flex align-items-center justify-content-end">
                <a href="{{ path('evenement_list') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>

        <!-- Form Card -->
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row g-4">
                    <!-- Titre -->
                    <div class="col-md-12">
                        {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Nutrition et Santé Cardiovasculaire'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <!-- Type -->
                    <div class="col-md-6">
                        {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <!-- Statut -->
                    <div class="col-md-6">
                        {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.statut) }}
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control form-textarea', 'placeholder': 'Décrivez votre événement en détail...'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <!-- Dates -->
                    <div class="col-md-6">
                        {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        </div>
                        {{ form_errors(form.dateDebut) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.dateFin, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        </div>
                        {{ form_errors(form.dateFin) }}
                    </div>

                    <!-- Mode -->
                    <div class="col-md-6">
                        {{ form_label(form.mode, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.mode, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.mode) }}
                    </div>

                    <!-- Lieu -->
                    <div class="col-md-6">
                        {{ form_label(form.lieu, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Adresse ou lien de connexion'}}) }}
                        {{ form_errors(form.lieu) }}
                    </div>

                    <!-- Places -->
                    <div class="col-md-6">
                        {{ form_label(form.placesMax, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.placesMax, {'attr': {'class': 'form-control', 'placeholder': 'Illimité'}}) }}
                            <span class="input-group-text">places</span>
                        </div>
                        {{ form_errors(form.placesMax) }}
                    </div>

                    <!-- Tarif -->
                    <div class="col-md-6">
                        {{ form_label(form.tarif, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.tarif, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                            <span class="input-group-text">{{ currency ?? 'TND' }}</span>
                        </div>
                        {{ form_errors(form.tarif) }}
                    </div>

                    <!-- Groupes Cibles -->
                    <div class="col-12 mb-4">
                        <div class="card border">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 fw-semibold">
                                    <i class="fas fa-users me-2 text-primary"></i>
                                    Groupes cibles
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3 small">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Sélectionnez les groupes pour lesquels cet événement est destiné.
                                </p>
                                
                                <div class="row g-3 mb-3">
                                    {% for groupeCible in form.groupeCibles %}
                                        <div class="col-md-4 col-sm-6">
                                            <div class="border rounded p-3 h-100 position-relative">
                                                <div class="form-check">
                                                    {{ form_widget(groupeCible, {
                                                        'attr': {
                                                            'class': 'form-check-input position-absolute',
                                                            'style': 'top: 1rem; right: 1rem;'
                                                        }
                                                    }) }}
                                                    {{ form_label(groupeCible, null, {
                                                        'label_attr': {
                                                            'class': 'form-check-label stretched-link cursor-pointer d-block mb-2'
                                                        }
                                                    }) }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                
                                {{ form_errors(form.groupeCibles) }}
                                
                                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                    <small class="text-muted">
                                        <i class="fas fa-lightbulb me-1"></i>
                                        Facultatif : laissez vide pour tous les groupes
                                    </small>
                                    <a href="{{ path('groupe_cible_new', {'referrer': 'admin_evenement_update', 'event_id': evenement.id}) }}" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-plus me-1"></i> Nouveau groupe
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-5 d-flex justify-content-end">
                    <a href="{{ path('admin_evenement_list') }}" class="btn btn-secondary me-2 px-4">Annuler</a>
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i>Enregistrer
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
{% include 'partials/footer.html.twig' %}

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    flatpickr('.datetimepicker', {
        enableTime: true,
        dateFormat: "d/m/Y H:i",
        time_24hr: true,
        locale: "fr",
        minDate: "today"
    });

    const form = document.querySelector('form');
    form?.addEventListener('submit', function(e) {
        if (!form.checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>

</body>
</html>