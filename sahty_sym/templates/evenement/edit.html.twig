            position: relative;
            transition: all 0.2s;
        }
        .groupe-cible-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .form-check-input.position-absolute {
            top: 0.75rem;
            left: 0.75rem;
            z-index: 5;
        }
        .cursor-pointer {
            cursor: pointer;
        }
        .limited-groups {
            position: relative;
        }
        .groups-overlay {
            display: none;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(248,249,250,0.9), #f8f9fa);
            padding: 3rem 1rem 1rem;
            text-align: center;
        }
