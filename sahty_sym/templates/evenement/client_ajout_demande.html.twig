<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Demander un Événement</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <style>
        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
            transition: all 0.2s;
        }
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            outline: none;
        }
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            color: #495057;
        }
        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }
        .input-group .form-control, .input-group-text {
            border-radius: 0.5rem;
        }
        .is-invalid {
            border-color: #dc3545 !important;
        }
        .invalid-feedback {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }
        .btn-primary, .btn-secondary {
            padding: 0.75rem 2rem;
            font-weight: 600;
            border-radius: 0.5rem;
        }
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
        .card-body {
            padding: 2rem;
        }
        .display-6 {
            color: #212529;
        }
        .container-fluid.py-5 {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
        .groupe-cible-card {
            position: relative;
            transition: all 0.2s;
        }
        .groupe-cible-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .form-check-input.position-absolute {
            top: 0.75rem;
            left: 0.75rem;
            z-index: 5;
        }
        .cursor-pointer {
            cursor: pointer;
        }
        .limited-groups {
            position: relative;
        }
        .groups-overlay {
            display: none;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(248,249,250,0.9), #f8f9fa);
            padding: 3rem 1rem 1rem;
            text-align: center;
        }
        .limited-groups .row {
            max-height: 300px;
            overflow: hidden;
            position: relative;
        }
        .limited-groups.show-all .row {
            max-height: none;
            overflow: visible;
        }
        .limited-groups.show-all .groups-overlay {
            display: none;
        }
        .btn-see-all {
            transition: all 0.3s;
        }
        .btn-see-all:hover {
            transform: translateY(-2px);
        }
        .groups-count-badge {
            background-color: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
            border-radius: 1rem;
        }
        .info-box {
            background: #e8f4fd;
            border-left: 4px solid #2196F3;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }
        .info-box i {
            color: #2196F3;
        }
    </style>
</head>

<body>

{% include 'partials/header.html.twig' %}

<div class="container-fluid py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8">
                <h1 class="display-6 fw-bold mb-3 text-dark">
                    <i class="fas fa-paper-plane text-primary me-2"></i>
                    Demander un Événement
                </h1>
                <p class="text-muted mb-0">Soumettez votre événement pour approbation par l'administrateur</p>
            </div>
            <div class="col-md-4 d-flex align-items-center justify-content-end">
                <a href="{{ path('evenements_client_events') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>

        <div class="info-box">
            <div class="d-flex align-items-start">
                <i class="fas fa-info-circle fa-lg me-3 mt-1"></i>
                <div>
                    <h6 class="fw-bold mb-2">Comment ça marche ?</h6>
                    <p class="mb-0">
                        1. Remplissez le formulaire ci-dessous avec les détails de votre événement<br>
                        2. Soumettez votre demande pour approbation<br>
                        3. Un administrateur examinera votre demande sous 48h<br>
                        4. Vous serez notifié par email lorsque votre événement sera approuvé ou refusé
                    </p>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row g-4">
                    <!-- Titre - Full width -->
                    <div class="col-12">
                        {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {
                            'class': 'form-control', 
                            'placeholder': 'Ex: Nutrition et Santé Cardiovasculaire',
                            'required': 'required',
                            'minlength': '5',
                            'maxlength': '200'
                        }}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <!-- Type et Mode côte à côte -->
                    <div class="col-md-6">
                        {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.mode, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.mode, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.mode) }}
                    </div>

                    <!-- Description - Full width -->
                    <div class="col-12">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {
                            'class': 'form-control form-textarea', 
                            'placeholder': 'Décrivez votre événement en détail...',
                            'maxlength': '5000'
                        }}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <!-- Dates côte à côte -->
                    <div class="col-md-6">
                        {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.dateDebut, {'attr': {
                                'class': 'form-control', 
                                'type': 'datetime-local',
                                'required': 'required',
                                'min': "now"|date_modify("+2 days")|date('Y-m-d\\TH:i')
                            }}) }}
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        </div>
                        {{ form_errors(form.dateDebut) }}
                        <small class="text-muted">L'événement doit être prévu au moins 48h à l'avance</small>
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.dateFin, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.dateFin, {'attr': {
                                'class': 'form-control', 
                                'type': 'datetime-local',
                                'required': 'required',
                                'min': "now"|date_modify("+2 days")|date('Y-m-d\\TH:i')
                            }}) }}
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        </div>
                        {{ form_errors(form.dateFin) }}
                    </div>

                    <!-- Lieu -->
                    <div class="col-md-6">
                        {{ form_label(form.lieu, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lieu, {'attr': {
                            'class': 'form-control', 
                            'placeholder': 'Adresse ou lien de connexion',
                            'maxlength': '500'
                        }}) }}
                        {{ form_errors(form.lieu) }}
                    </div>

                    <div class="col-md-6">
    {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
    {{ form_errors(form.statut) }}
</div>


                    <!-- Places max et Tarif côte à côte -->
                    <div class="col-md-6">
                        {{ form_label(form.placesMax, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.placesMax, {'attr': {
                                'class': 'form-control', 
                                'placeholder': 'Illimité',
                                'min': '1',
                                'max': '10000'
                            }}) }}
                            <span class="input-group-text">places</span>
                        </div>
                        {{ form_errors(form.placesMax) }}
                        <small class="text-muted">Laissez vide pour illimité</small>
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.tarif, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.tarif, {'attr': {
                                'class': 'form-control', 
                                'placeholder': '0.00',
                                'min': '0',
                                'max': '10000',
                                'step': '0.01'
                            }}) }}
                            <span class="input-group-text">TND</span>
                        </div>
                        {{ form_errors(form.tarif) }}
                        <small class="text-muted">Gratuit si vide ou 0</small>
                    </div>

                <div class="col-12 mb-4">
                    <div class="card border">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0 fw-semibold">
                                    <i class="fas fa-users me-2 text-primary"></i>
                                    Groupes cibles
                                </h6>
                            </div>
                            <span class="groups-count-badge">
                                {% if form.groupeCibles.vars.choices|length %}
                                    {{ form.groupeCibles.vars.choices|length }} groupe{{ form.groupeCibles.vars.choices|length > 1 ? 's' : '' }}
                                {% else %}
                                    Aucun groupe
                                {% endif %}
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3 small">
                                <i class="fas fa-info-circle me-1"></i>
                                Sélectionnez les groupes pour lesquels cet événement est destiné.
                            </p>
                            
                            {% if form.groupeCibles.vars.choices|length > 0 %}
                                <div class="limited-groups" id="limitedGroups">
                                    <div class="row g-3 mb-3" id="groupsContainer">
                                        {% for choice in form.groupeCibles.vars.choices|slice(0, 4) %}
                                            <div class="col-md-3 col-sm-6">
                                                <div class="border rounded p-3 h-100 groupe-cible-card position-relative">
                                                    <div class="form-check">
                                                        <input type="checkbox" 
                                                               class="form-check-input position-absolute"
                                                               id="groupe_cible_{{ choice.value }}"
                                                               name="{{ form.groupeCibles.vars.full_name }}[]"
                                                               value="{{ choice.value }}"
                                                               {% if choice.value in form.groupeCibles.vars.value %}checked{% endif %}>
                                                        <label class="form-check-label cursor-pointer d-block mb-2 ps-4" 
                                                               for="groupe_cible_{{ choice.value }}">
                                                            {{ choice.label }}
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    {% if form.groupeCibles.vars.choices|length > 4 %}
                                    <div class="row g-3 mb-3" id="allGroups" style="display: none;">
                                        {% for choice in form.groupeCibles.vars.choices|slice(4) %}
                                            <div class="col-md-3 col-sm-6">
                                                <div class="border rounded p-3 h-100 groupe-cible-card position-relative">
                                                    <div class="form-check">
                                                        <input type="checkbox" 
                                                               class="form-check-input position-absolute"
                                                               id="groupe_cible_{{ choice.value }}_hidden"
                                                               name="{{ form.groupeCibles.vars.full_name }}[]"
                                                               value="{{ choice.value }}"
                                                               {% if choice.value in form.groupeCibles.vars.value %}checked{% endif %}>
                                                        <label class="form-check-label cursor-pointer d-block mb-2 ps-4" 
                                                               for="groupe_cible_{{ choice.value }}_hidden">
                                                            {{ choice.label }}
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    <div class="groups-overlay" id="groupsOverlay">
                                        <button type="button" 
                                                class="btn btn-outline-primary btn-see-all"
                                                onclick="showAllGroups()">
                                            <i class="fas fa-chevron-down me-1"></i>
                                            Voir tous les groupes ({{ form.groupeCibles.vars.choices|length - 4 }} de plus)
                                        </button>
                                    </div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Aucun groupe cible disponible. Les groupes sont créés par les administrateurs.
                                </div>
                            {% endif %}
                            
                            {{ form_errors(form.groupeCibles) }}
                            
                            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                <div class="text-muted">
                                    <i class="fas fa-lightbulb me-1"></i>
                                    Facultatif : laissez vide pour tous les groupes
                                </div>
                                <div>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-clock me-1"></i>
                                        En attente d'approbation
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- Fin row g-4 -->

            <div class="mt-5 d-flex justify-content-between align-items-center">
                <div class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    Temps d'approbation estimé : 24-48h
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('evenements_client_events') }}" class="btn btn-secondary px-4">Annuler</a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-paper-plane me-1"></i>Soumettre la demande
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% include 'partials/footer.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    }

    // Validation des dates
    const dateDebut = document.querySelector('#{{ form.dateDebut.vars.id|default('') }}');
    const dateFin = document.querySelector('#{{ form.dateFin.vars.id|default('') }}');
    
    if (dateDebut && dateFin) {
        // Calculer la date minimum (J+2)
        const now = new Date();
        const minDate = new Date(now);
        minDate.setDate(now.getDate() + 2);
        
        // Formater pour l'attribut min (YYYY-MM-DDTHH:mm)
        const year = minDate.getFullYear();
        const month = String(minDate.getMonth() + 1).padStart(2, '0');
        const day = String(minDate.getDate()).padStart(2, '0');
        const hours = String(minDate.getHours()).padStart(2, '0');
        const minutes = String(minDate.getMinutes()).padStart(2, '0');
        const minDateStr = `${year}-${month}-${day}T${hours}:${minutes}`;
        
        dateDebut.min = minDateStr;
        dateFin.min = minDateStr;
        
        dateDebut.addEventListener('change', function() {
            if (this.value) {
                dateFin.min = this.value;
                // Si la date de fin est antérieure à la date de début, la réinitialiser
                if (dateFin.value && dateFin.value < this.value) {
                    dateFin.value = this.value;
                }
            }
        });
    }
});

function showAllGroups() {
    const limitedGroups = document.getElementById('limitedGroups');
    const allGroups = document.getElementById('allGroups');
    const groupsOverlay = document.getElementById('groupsOverlay');
    
    if (allGroups) {
        allGroups.style.display = 'flex';
    }
    
    if (groupsOverlay) {
        groupsOverlay.style.display = 'none';
    }
    
    limitedGroups.classList.add('show-all');
    
    const button = document.querySelector('.btn-see-all');
    if (button) {
        button.innerHTML = '<i class="fas fa-chevron-up me-1"></i> Voir moins de groupes';
        button.onclick = function(e) {
            e.preventDefault();
            hideAllGroups();
        };
    }
}

function hideAllGroups() {
    const limitedGroups = document.getElementById('limitedGroups');
    const allGroups = document.getElementById('allGroups');
    const groupsOverlay = document.getElementById('groupsOverlay');
    
    if (allGroups) {
        allGroups.style.display = 'none';
    }
    
    if (groupsOverlay) {
        groupsOverlay.style.display = 'block';
    }
    
    limitedGroups.classList.remove('show-all');
    
    const button = document.querySelector('.btn-see-all');
    if (button) {
        button.innerHTML = '<i class="fas fa-chevron-down me-1"></i> Voir tous les groupes (' + button.getAttribute('data-remaining') + ' de plus)';
        button.onclick = function(e) {
            e.preventDefault();
            showAllGroups();
        };
    }
}
</script>
</body>
</html>