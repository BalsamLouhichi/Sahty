    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert:not(.alert-info)');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert) {
                        alert.style.transition = 'opacity 0.5s ease';
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 500);
                    }
                }, 5000);
            });
            
            // Tooltips
            const tooltips = document.querySelectorAll('[title]');
            tooltips.forEach(element => {
                element.addEventListener('mouseenter', function(e) {
                    if (!this.getAttribute('data-bs-toggle')) {
                        // Bootstrap tooltips could be initialized here if needed
                    }
                });
            });
            
            // Highlight rows that have been waiting > 48h
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const hoursBadge = row.querySelector('.badge.bg-danger');
                if (hoursBadge && hoursBadge.textContent.includes('>24h')) {
                    row.style.backgroundColor = '#fff5f5';
                }
            });
        });
    </script>
