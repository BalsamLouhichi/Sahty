    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filter functionality
            const filterTabs = document.querySelectorAll('.filter-badge');
            const participantRows = document.querySelectorAll('.participant-row');
            
            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    filterTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filter = this.dataset.filter;
                    
                    participantRows.forEach(row => {
                        const statut = row.dataset.statut;
                        const present = row.dataset.present;
                        
                        if (filter === 'all') {
                            row.style.display = '';
                        } else if (filter === 'present') {
                            row.style.display = present === 'present' ? '' : 'none';
                        } else if (filter === 'absent') {
                            row.style.display = present === 'absent' ? '' : 'none';
                        } else {
                            row.style.display = statut === filter ? '' : 'none';
                        }
                    });
                });
            });
            
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    
                    participantRows.forEach(row => {
                        if (searchTerm === '') {
                            row.style.display = '';
                            return;
                        }
                        
                        const nom = row.dataset.nom?.toLowerCase() || '';
                        const email = row.dataset.email?.toLowerCase() || '';
                        
                        if (nom.includes(searchTerm) || email.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                    
                    // Reset active filter
                    filterTabs.forEach(t => t.classList.remove('active'));
                    document.querySelector('[data-filter="all"]').classList.add('active');
                });
            }
            
            // Animation on scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.participant-row').forEach(row => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';
                row.style.transition = 'all 0.5s ease';
                observer.observe(row);
            });
        });

        // Export functions (simulated)
        function exportToExcel() {
            alert('Export Excel - Fonctionnalité à implémenter');
        }

        function exportToPDF() {
            alert('Export PDF - Fonctionnalité à implémenter');
        }
    </script>
