<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>MEDINOVA - Inscription</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Google Fonts #}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    {# Font Awesome #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">

    {# Bootstrap #}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <style>
        :root {
            --primary: #13C5DD;
            --primary-light: #E8F9FD;
            --primary-dark: #0FB4C9;
            --secondary: #354F8E;
            --light: #EFF5F9;
            --dark: #1D2A4D;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.12);
            --shadow-lg: 0 20px 40px rgba(0,0,0,0.15);
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, var(--light) 0%, white 100%);
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
        }

        .signup-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .signup-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 0;
        }

        .signup-card {
            background: white;
            padding: 3rem;
            border-radius: 15px;
            width: 100%;
            max-width: 900px;
            box-shadow: var(--shadow-md);
            border: 1px solid rgba(19, 197, 221, 0.1);
        }

        .signup-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .signup-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 1rem;
            display: block;
        }

        .signup-header h1 {
            font-family: 'Jost', sans-serif;
            font-size: 2rem;
            color: var(--dark);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .signup-header p {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 0;
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .form-section h4 {
            font-family: 'Jost', sans-serif;
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
        }

        .form-section h4 .fas {
            margin-right: 0.75rem;
            color: var(--primary);
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
            margin-bottom: 0.75rem;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(19, 197, 221, 0.15);
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }

        .form-control.is-invalid:focus {
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.15);
        }

        select.form-control {
            cursor: pointer;
        }

        .role-card {
            cursor: pointer;
            border: 2px solid #dee2e6;
            transition: var(--transition);
            margin-bottom: 1rem;
            padding: 1.5rem;
            border-radius: 10px;
            text-align: center;
            background: white;
        }

        .role-card:hover {
            border-color: var(--primary);
            box-shadow: var(--shadow-sm);
            transform: translateY(-2px);
        }

        .role-card.active {
            border-color: var(--primary);
            background: var(--primary-light);
            box-shadow: var(--shadow-sm);
        }

        .role-icon {
            font-size: 2rem;
            color: var(--primary);
            margin-bottom: 0.75rem;
        }

        .role-card h5 {
            font-family: 'Jost', sans-serif;
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .role-card p {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0;
        }

        .role-specific {
            display: none;
            margin-top: 2rem;
            padding: 2rem;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            background: #f8f9fa;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .role-specific h5 {
            font-family: 'Jost', sans-serif;
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }

        .role-specific h5 .fas {
            margin-right: 0.75rem;
            color: var(--primary);
        }

        .btn-submit {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            font-weight: 600;
            padding: 0.85rem 2rem;
            border: none;
            border-radius: 8px;
            transition: var(--transition);
            font-size: 0.95rem;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(19, 197, 221, 0.35);
            color: white;
            text-decoration: none;
        }

        .signup-footer {
            text-align: center;
            margin-top: 2rem;
            color: #6c757d;
            font-size: 0.95rem;
        }

        .signup-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
        }

        .signup-footer a:hover {
            color: var(--primary-dark);
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .alert {
            border: none;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }

        hr {
            border: none;
            border-top: 1px solid #e9ecef;
            margin: 2rem 0;
        }

        @media (max-width: 768px) {
            .signup-card {
                padding: 2rem;
            }

            .signup-header h1 {
                font-size: 1.5rem;
            }

            .form-section h4 {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
<div class="signup-wrapper">
    {% include 'partials/header.html.twig' %}

    <div class="signup-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="signup-card">
                        <div class="signup-header">
                            <div class="signup-icon"><i class="fas fa-user-check"></i></div>
                            <h1>Créer votre compte</h1>
                            <p>Rejoignez MEDINOVA et accédez à notre plateforme médicale</p>
                        </div>

                        {# Affichage des messages flash #}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

                            {# Sélection du rôle avec cards #}
                            <div class="form-section">
                                <h4><i class="fas fa-id-badge"></i> Sélectionnez votre rôle <span class="text-danger">*</span></h4>
                                <div class="row g-3">
                                    {% for role, info in {
                                        'patient': {'icon':'fas fa-user-injured','label':'Patient','desc':'Prenez rendez-vous et consultez vos résultats'},
                                        'medecin': {'icon':'fas fa-user-md','label':'Médecin','desc':'Gérez vos patients et consultations'},
                                        'responsable_labo': {'icon':'fas fa-flask','label':'Laboratoire','desc':'Gérez les analyses de laboratoire'},
                                        'responsable_para': {'icon':'fas fa-heart-pulse','label':'Parapharmacie','desc':'Gérez les services paramédicaux'}
                                    } %}
                                    <div class="col-md-6">
                                        <div class="role-card" data-role="{{ role }}">
                                            <div class="role-icon"><i class="{{ info.icon }}"></i></div>
                                            <h5>{{ info.label }}</h5>
                                            <p>{{ info.desc }}</p>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                
                                <div class="mt-3">
                                    {{ form_label(form.role) }}
                                    {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.role) }}</div>
                                </div>
                            </div>

                            <hr>

                            {# Infos générales #}
                            <div class="form-section">
                                <h4><i class="fas fa-user"></i> Informations générales</h4>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        {{ form_label(form.nom, null, {'label_attr': {'class': 'required-field form-label'}}) }}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.nom) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.prenom, null, {'label_attr': {'class': 'required-field form-label'}}) }}
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.email, null, {'label_attr': {'class': 'required-field form-label'}}) }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.email) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.telephone) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.dateNaissance) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Sexe</label>
                                        <select class="form-control" name="sexe">
                                            <option value="">Sélectionnez...</option>
                                            <option value="M">Masculin</option>
                                            <option value="F">Féminin</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.password, null, {'label_attr': {'class': 'required-field form-label'}}) }}
                                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.password) }}</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label required-field">Confirmer le mot de passe</label>
                                        <input type="password" class="form-control" name="confirm_password" required minlength="6" placeholder="Confirmez votre mot de passe">
                                    </div>
                                    <div class="col-md-12">
                                        {{ form_label(form.photoProfil, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.photoProfil, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.photoProfil) }}</div>
                                    </div>
                                </div>
                            </div>

                            {# Infos spécifiques selon rôle #}
                            <div id="patient-info" class="role-specific">
                                <h5><i class="fas fa-stethoscope"></i> Informations Patient</h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Groupe sanguin</label>
                                        <select class="form-control" name="groupe_sanguin">
                                            <option value="">Sélectionnez...</option>
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Contact urgence</label>
                                        <input type="tel" class="form-control" name="contact_urgence" placeholder="Numéro de contact d'urgence">
                                    </div>
                                </div>
                            </div>

                            <div id="medecin-info" class="role-specific">
                                <h5><i class="fas fa-user-md"></i> Informations Médecin</h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Spécialité</label>
                                        <input type="text" class="form-control" name="specialite" placeholder="Votre spécialité médicale">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Années d'expérience</label>
                                        <input type="number" class="form-control" name="annee_experience" min="0" placeholder="Années d'expérience">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Grade</label>
                                        <input type="text" class="form-control" name="grade" placeholder="Votre grade/titre">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Adresse cabinet</label>
                                        <input type="text" class="form-control" name="adresse_cabinet" placeholder="Adresse de votre cabinet">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Téléphone cabinet</label>
                                        <input type="tel" class="form-control" name="telephone_cabinet" placeholder="Téléphone du cabinet">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Établissement</label>
                                        <input type="text" class="form-control" name="nom_etablissement" placeholder="Nom de votre établissement">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Numéro d'urgence</label>
                                        <input type="tel" class="form-control" name="numero_urgence" placeholder="Numéro d'urgence">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Document PDF</label>
                                        <input type="file" class="form-control" name="document_pdf" accept=".pdf">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Disponibilités</label>
                                        <textarea class="form-control" name="disponibilite" rows="3" placeholder="Décrivez vos disponibilités"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div id="responsable_labo-info" class="role-specific">
                                <h5><i class="fas fa-flask"></i> Informations Laboratoire</h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">ID Laboratoire</label>
                                        <input type="number" class="form-control" name="laboratoire_id" min="1" placeholder="Identifiant du laboratoire">
                                    </div>
                                </div>
                            </div>

                            <div id="responsable_para-info" class="role-specific">
                                <h5><i class="fas fa-heart-pulse"></i> Informations Parapharmacie</h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">ID Parapharmacie</label>
                                        <input type="number" class="form-control" name="parapharmacie_id" min="1" placeholder="Identifiant de la parapharmacie">
                                    </div>
                                </div>
                            </div>

                            <div class="form-section text-center">
                                <button type="submit" class="btn-submit">
                                    <i class="fas fa-check-circle"></i> Créer mon compte
                                </button>
                                <div class="signup-footer">
                                    Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a>
                                </div>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'partials/footer.html.twig' %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const roleCards = document.querySelectorAll('.role-card');
        const roleSections = document.querySelectorAll('.role-specific');
        const roleSelectName = '{{ form.role.vars.full_name }}';
        const roleSelect = document.querySelector(`select[name="${roleSelectName}"]`);

        roleCards.forEach(card => {
            card.addEventListener('click', function() {
                roleCards.forEach(c => c.classList.remove('active'));
                this.classList.add('active');

                const role = this.dataset.role;
                if (roleSelect) {
                    roleSelect.value = role;
                }

                roleSections.forEach(sec => sec.style.display = 'none');
                const section = document.getElementById(role + '-info');
                if(section) {
                    section.style.display = 'block';
                }
            });
        });

        if (roleSelect) {
            roleSelect.addEventListener('change', function() {
                const role = this.value;
                roleCards.forEach(card => {
                    card.classList.remove('active');
                    if (card.dataset.role === role) {
                        card.classList.add('active');
                    }
                });
                
                roleSections.forEach(sec => sec.style.display = 'none');
                const section = document.getElementById(role + '-info');
                if(section) {
                    section.style.display = 'block';
                }
            });
        }

        // Validation de la confirmation du mot de passe
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const passwordInput = document.querySelector(`input[name="${roleSelectName.replace('role', 'password')}"]`);
                const confirmPasswordInput = document.querySelector('input[name="confirm_password"]');
                
                const password = passwordInput ? passwordInput.value : '';
                const confirmPassword = confirmPasswordInput ? confirmPasswordInput.value : '';
                
                if (!roleSelect || !roleSelect.value) {
                    e.preventDefault();
                    alert('Veuillez sélectionner un rôle !');
                    if (roleSelect) roleSelect.focus();
                    return false;
                }
                
                if (password !== confirmPassword) {
                    e.preventDefault();
                    alert('Les mots de passe ne correspondent pas !');
                    if (confirmPasswordInput) confirmPasswordInput.focus();
                    return false;
                }
                
                if (!password) {
                    e.preventDefault();
                    alert('Veuillez entrer un mot de passe !');
                    if (passwordInput) passwordInput.focus();
                    return false;
                }
                
                if (password.length < 6) {
                    e.preventDefault();
                    alert('Le mot de passe doit contenir au moins 6 caractères !');
                    if (passwordInput) passwordInput.focus();
                    return false;
                }
            });
        }
    });
</script>
</body>
</html>
