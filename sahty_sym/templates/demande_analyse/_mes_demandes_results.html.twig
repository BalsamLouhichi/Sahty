{% if demandes is empty %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-file-medical"></i>
                </div>

                <h3 class="mb-3">Aucune demande d'analyse</h3>

                <p class="text-muted mb-4">
                    Vous n'avez pas encore cree de demande d'analyse.
                    Creez votre premiere demande pour commencer.
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <a href="{{ path('app_demande_analyse_new') }}" class="btn btn-primary btn-lg px-5">
                        <i class="fas fa-plus me-2"></i> Creer une Demande
                    </a>

                    <a href="{{ path('app_labo_index') }}" class="btn btn-outline-primary btn-lg px-5">
                        <i class="fas fa-hospital me-2"></i> Explorer Laboratoires
                    </a>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date </th>
                            <th>Type de Bilan</th>
                            <th>Laboratoire</th>
                            <th>Medecin Prescripteur</th>
                            <th>Statut</th>
                            <th>Priorite</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for demande in demandes %}
                        <tr>
                            <td class="fw-bold">#{{ demande.id }}</td>
                            <td class="date-cell">
                                {{ demande.programmeLe ? demande.programmeLe|date('d/m/Y H:i') : '-' }}
                            </td>
                            <td class="type-cell">{{ demande.typeBilan }}</td>
                            <td>
                                {% if demande.laboratoire %}
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-hospital text-primary me-2"></i>
                                        <span>{{ demande.laboratoire.nom }}</span>
                                    </div>
                                {% else %}
                                    <span class="text-muted fst-italic">Non specifie</span>
                                {% endif %}
                            </td>
                            <td class="medecin-cell">
                                {% if demande.medecin %}
                                    <div class="medecin-info">
                                        <i class="fas fa-user-md medecin-icon"></i>
                                        <div>
                                            <div class="fw-bold small">Dr. {{ demande.medecin.nomComplet }}</div>
                                            {% if demande.medecin.specialite %}
                                                <div class="text-muted smaller">{{ demande.medecin.specialite }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="no-medecin">Non specifie</span>
                                {% endif %}
                            </td>
                            <td>
                                {% set statut = demande.resultatPdf ? 'envoye' : 'en_attente' %}
                                {% if statut == 'en_attente' %}
                                    <span class="statut-badge badge-en_attente">
                                        <i class="fas fa-clock me-1"></i> En attente
                                    </span>
                                {% else %}
                                    <span class="statut-badge badge-envoye">
                                        <i class="fas fa-paper-plane me-1"></i> Envoye
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                {% set priorite = demande.priorite %}
                                {% if priorite == 'urgent' %}
                                    <span class="priorite-badge badge-urgent">
                                        <i class="fas fa-exclamation-circle me-1"></i> Urgent
                                    </span>
                                {% elseif priorite == 'haute' %}
                                    <span class="priorite-badge badge-haute">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Haute
                                    </span>
                                {% else %}
                                    <span class="priorite-badge badge-normale">
                                        <i class="fas fa-check-circle me-1"></i> Normale
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button"
                                            class="btn btn-sm btn-primary js-result-pdf"
                                            title="Voir resultat PDF"
                                            data-bs-toggle="tooltip"
                                            data-status="{{ demande.resultatPdf ? 'envoye' : 'en_attente' }}"
                                            data-pdf="{{ demande.resultatPdf ? asset(demande.resultatPdf) : '' }}">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    {% if demande.resultatPdf is null %}
                                        <a href="{{ path('app_demande_analyse_edit', {'id': demande.id}) }}"
                                           class="btn btn-sm btn-warning"
                                           title="Modifier"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    {% endif %}

                                    {% if demande.resultatPdf is null %}
                                        <form method="post"
                                              action="{{ path('app_demande_analyse_delete', {'id': demande.id}) }}"
                                              onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette demande ?');"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    title="Supprimer"
                                                    data-bs-toggle="tooltip">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row mt-5">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="demande-card text-center p-4">
                        <div class="info-icon mx-auto mb-3">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h4 class="mb-2">
                            {% set en_attente = demandes|filter(d => d.resultatPdf is null)|length %}
                            {{ en_attente }}
                        </h4>
                        <p class="text-muted mb-0">En attente</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="demande-card text-center p-4">
                        <div class="info-icon mx-auto mb-3">
                            <i class="fas fa-paper-plane"></i>
                        </div>
                        <h4 class="mb-2">
                            {% set envoye = demandes|filter(d => d.resultatPdf is not null)|length %}
                            {{ envoye }}
                        </h4>
                        <p class="text-muted mb-0">Envoyees</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="demande-card text-center p-4">
                        <div class="info-icon mx-auto mb-3">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h4 class="mb-2">
                            {% set avec_medecin = demandes|filter(d => d.medecin is not null)|length %}
                            {{ avec_medecin }}
                        </h4>
                        <p class="text-muted mb-0">Avec medecin</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="demande-card text-center p-4">
                        <div class="info-icon mx-auto mb-3">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="mb-2">{{ demandes|length }}</h4>
                        <p class="text-muted mb-0">Total des demandes</p>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-4">
                    <div class="demande-card p-4">
                        <h5 class="mb-4">
                            <i class="fas fa-user-md text-primary me-2"></i>
                            Repartition par medecin prescripteur
                        </h5>
                        {% set avec_medecin = demandes|filter(d => d.medecin is not null)|length %}
                        {% set sans_medecin = demandes|filter(d => d.medecin is null)|length %}

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Avec medecin</span>
                                <span>{{ avec_medecin }} ({{ (avec_medecin / demandes|length * 100)|round(1) }}%)</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-primary" role="progressbar"
                                     style="width: {{ (avec_medecin / demandes|length * 100) }}%">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Sans medecin</span>
                                <span>{{ sans_medecin }} ({{ (sans_medecin / demandes|length * 100)|round(1) }}%)</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-secondary" role="progressbar"
                                     style="width: {{ (sans_medecin / demandes|length * 100) }}%">
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                {{ avec_medecin }} demande(s) avec medecin sur {{ demandes|length }} au total
                            </small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="demande-card p-4">
                        <h5 class="mb-4">
                            <i class="fas fa-heartbeat text-primary me-2"></i>
                            Statuts des demandes
                        </h5>

                        {% set en_attente = demandes|filter(d => d.resultatPdf is null)|length %}
                        {% set envoye = demandes|filter(d => d.resultatPdf is not null)|length %}

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-clock text-warning me-2"></i>En attente</span>
                            <span class="badge bg-light text-dark">{{ en_attente }}</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-paper-plane text-success me-2"></i>Envoye</span>
                            <span class="badge bg-light text-dark">{{ envoye }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
