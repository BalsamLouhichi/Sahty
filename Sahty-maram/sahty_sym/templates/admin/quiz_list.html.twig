{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des Quiz - Sahty Administration{% endblock %}

{% block content %}
    <style>
        .quiz-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        .quiz-header h2 {
            font-size: 1.8rem;
            margin: 0;
            color: #1D2A4D;
            font-weight: 700;
        }

        .search-box {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .search-box input {
            flex: 1;
            padding: 0.75rem 1rem;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            font-size: 0.95rem;
        }

        .search-box button {
            padding: 0.75rem 1.5rem;
            background-color: #13C5DD;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .search-box button:hover {
            background-color: #0FB4C9;
        }

        .table-wrapper {
            background: white;
            border-radius: 10px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.06);
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #1D2A4D;
            font-weight: 600;
            padding: 1.25rem;
            border-bottom: 2px solid #dee2e6;
            font-size: 0.95rem;
        }

        .table tbody td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f3f5;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge {
            padding: 0.5rem 0.75rem;
            border-radius: 4px;
            font-weight: 500;
            font-size: 0.85rem;
        }

        .badge-primary {
            background-color: #E8F4F8;
            color: #13C5DD;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.85rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-info:hover {
            background-color: #138496;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .empty-state {
            padding: 3rem;
            text-align: center;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .description-truncate {
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>

    <div class="quiz-header">
        <div>
            <h2><i class="fas fa-question-circle me-3"></i>Gestion des Quiz</h2>
            <p class="text-muted mb-0">Gérez tous les questionnaires du système</p>
        </div>
        <a href="{{ path('app_quiz_new') }}" class="btn btn-success" style="padding: 0.75rem 1.5rem; border-radius: 8px;">
            <i class="fas fa-plus me-2"></i>Ajouter un Quiz
        </a>
    </div>

    <div class="search-box">
        <form method="GET" style="display: flex; gap: 1rem; width: 100%;">
            <input type="text" name="search" placeholder="Rechercher un quiz..." value="{{ app.request.query.get('search', '') }}" style="flex: 1;">
            <button type="submit"><i class="fas fa-search me-2"></i>Rechercher</button>
            {% if app.request.query.get('search') %}
                <a href="{{ path('admin_quiz_index') }}" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem; border-radius: 8px;">
                    <i class="fas fa-times"></i> Réinitialiser
                </a>
            {% endif %}
        </form>
    </div>

    {% if quizzes is empty %}
        <div class="table-wrapper">
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p style="font-size: 1.1rem;">Aucun quiz trouvé</p>
                <p>Commencez par créer votre premier quiz</p>
            </div>
        </div>
    {% else %}
        <div class="table-wrapper">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 25%;">Nom</th>
                            <th style="width: 30%;">Description</th>
                            <th style="width: 10%;">Questions</th>
                            <th style="width: 15%;">Créé le</th>
                            <th style="width: 15%; text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for quiz in quizzes %}
                            <tr>
                                <td>
                                    <strong>#{{ quiz.id }}</strong>
                                </td>
                                <td>
                                    <strong>{{ quiz.name }}</strong>
                                </td>
                                <td>
                                    {% if quiz.description %}
                                        <div class="description-truncate" title="{{ quiz.description }}">
                                            {{ quiz.description }}
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Sans description</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge badge-primary">
                                        {{ quiz.questions|length }} question{{ quiz.questions|length > 1 ? 's' : '' }}
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {% if quiz.createdAt %}
                                            {{ quiz.createdAt|date('d/m/Y à H:i') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </small>
                                </td>
                                <td>
                                    <div class="action-buttons" style="justify-content: center;">
                                        <a href="{{ path('app_quiz_show', {id: quiz.id}) }}" class="btn-sm btn-info" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_quiz_edit', {id: quiz.id}) }}" class="btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" action="{{ path('app_quiz_delete', {id: quiz.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce quiz ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                            <button type="submit" class="btn-sm btn-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
