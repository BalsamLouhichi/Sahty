{# templates/admin/base_admin.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sahty - Administration{% endblock %}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --primary: #13C5DD;
            --primary-dark: #0FB4C9;
            --primary-light: #E8F9FD;
            --dark: #1D2A4D;
            --dark-light: #2A3A6B;
            --light: #EFF5F9;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-600: #6c757d;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--light);
            color: #333;
            margin: 0;
        }

        .sidebar {
            position: fixed;
            top: 0; left: 0;
            width: 260px;
            height: 100vh;
            background: linear-gradient(180deg, var(--dark) 0%, var(--dark-light) 100%);
            color: white;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: 1.5rem 1.25rem;
            background: rgba(0,0,0,0.2);
            text-align: center;
        }

        .sidebar-header h3 { margin: 0; font-size: 1.6rem; font-weight: 600; }

        .sidebar-menu a {
            color: rgba(255,255,255,0.9);
            padding: 0.9rem 1.25rem;
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            font-weight: 500;
        }

        .sidebar-menu a:hover,
        .sidebar-menu a.active {
            background: rgba(19,197,221,0.2);
            color: white;
            border-left: 4px solid var(--primary);
        }

        .main-content {
            margin-left: 260px;
            min-height: 100vh;
            transition: margin-left 0.3s ease;
        }

        .topbar {
            background: white;
            padding: 1rem 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .toggle-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--primary);
            cursor: pointer;
        }

        .content-container {
            padding: 1.5rem 1.75rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.06);
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
        }

        @media (max-width: 992px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.show { transform: translateX(0); }
            .main-content { margin-left: 0 !important; }
        }
    </style>

    {% block head_extra %}{% endblock %}
</head>
<body>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-hospital-user"></i> Sahty</h3>
            <small>Hospital Management</small>
        </div>

        <div class="sidebar-menu mt-3">
            <a href="{{ path('admin_index') }}" class="{{ app.request.attributes.get('_route') == 'admin_index' ? 'active' : '' }}">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a href="{{ path('admin_users') }}" class="{{ app.request.attributes.get('_route') starts with 'admin_user' ? 'active' : '' }}">
                <i class="fas fa-users"></i> Utilisateurs
            </a>
            <a href="{{ path('admin_quiz_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_quiz' or app.request.attributes.get('_route') starts with 'admin_quiz' ? 'active' : '' }}">
                <i class="fas fa-question-circle"></i> Quiz
            </a>
            <a href="{{ path('admin_recommandation_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_recommandation' or app.request.attributes.get('_route') starts with 'admin_recommandation' ? 'active' : '' }}">
                <i class="fas fa-lightbulb"></i> Recommandations
            </a>
            <a href="#"><i class="fas fa-calendar-check"></i> Rendez-vous</a>
            <a href="#"><i class="fas fa-chart-bar"></i> Rapports</a>
            <a href="#"><i class="fas fa-cog"></i> Paramètres</a>
        </div>

        <div class="p-3 mt-auto">
            <a href="{{ path('app_logout') }}" class="btn btn-outline-light w-100">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content" id="mainContent">

        <!-- Topbar -->
        <div class="topbar">
            <button class="toggle-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <div class="d-flex align-items-center gap-3">
                <div class="text-end d-none d-md-block">
                    <strong>
                        {% if app.user and attribute(app.user, 'prenom') is defined and attribute(app.user, 'nom') is defined %}
                            {{ app.user.prenom }} {{ app.user.nom }}
                        {% else %}
                            Administrateur
                        {% endif %}
                    </strong><br>
                    <small class="text-muted">
                        {% if app.user and attribute(app.user, 'role') is defined %}
                            {{ app.user.role }}
                        {% else %}
                            Admin
                        {% endif %}
                    </small>
                </div>

                <!-- Avatar avec protection totale contre "System" ou toute chaîne -->
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-bold" style="width:44px; height:44px; font-size:1.1rem;">
                    {% if app.user is not empty and app.user is not same as(false) and attribute(app.user, 'prenom') is defined and app.user.prenom is not empty %}
                        {{ app.user.prenom|first|upper }}
                    {% elseif app.user and app.user|length > 0 %}
                        {{ app.user|first|upper }}
                    {% else %}
                        A
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Flash messages -->
        <div class="content-container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block content %}{% endblock %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').onclick = function() {
            document.getElementById('sidebar').classList.toggle('show');
        };
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>