{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard | Sahty Admin{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block body %}
    <!-- STATS ROW -->
    <div class="row mb-4">
        <!-- Total Quizzes -->
        <div class="col-md-3 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="text-muted d-block mb-2" style="font-size: 0.9rem;">Total Quizzes</span>
                            <h3 class="mb-0" style="color: #0d6efd; font-weight: 700;">5</h3>
                        </div>
                        <div style="width: 50px; height: 50px; background: #e7f1ff; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-question-circle" style="font-size: 24px; color: #0d6efd;"></i>
                        </div>
                    </div>
                    <span class="text-success" style="font-size: 0.9rem;">
                        <i class="bi bi-arrow-up"></i> +2 this month
                    </span>
                </div>
            </div>
        </div>

        <!-- Total Questions -->
        <div class="col-md-3 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="text-muted d-block mb-2" style="font-size: 0.9rem;">Total Questions</span>
                            <h3 class="mb-0" style="color: #198754; font-weight: 700;">40</h3>
                        </div>
                        <div style="width: 50px; height: 50px; background: #e8f5e9; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-chat-dots" style="font-size: 24px; color: #198754;"></i>
                        </div>
                    </div>
                    <span class="text-success" style="font-size: 0.9rem;">
                        <i class="bi bi-arrow-up"></i> Well distributed
                    </span>
                </div>
            </div>
        </div>

        <!-- Total Recommendations -->
        <div class="col-md-3 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="text-muted d-block mb-2" style="font-size: 0.9rem;">Recommendations</span>
                            <h3 class="mb-0" style="color: #fd7e14; font-weight: 700;">15</h3>
                        </div>
                        <div style="width: 50px; height: 50px; background: #fff3cd; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-lightbulb" style="font-size: 24px; color: #fd7e14;"></i>
                        </div>
                    </div>
                    <span class="text-success" style="font-size: 0.9rem;">
                        <i class="bi bi-arrow-up"></i> Configured
                    </span>
                </div>
            </div>
        </div>

        <!-- System Health -->
        <div class="col-md-3 mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="text-muted d-block mb-2" style="font-size: 0.9rem;">System Status</span>
                            <h3 class="mb-0" style="color: #20c997; font-weight: 700;">Healthy</h3>
                        </div>
                        <div style="width: 50px; height: 50px; background: #d1e7dd; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-check-circle-fill" style="font-size: 24px; color: #198754;"></i>
                        </div>
                    </div>
                    <span class="text-success" style="font-size: 0.9rem;">
                        <i class="bi bi-heart-fill"></i> All systems operational
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK ACTIONS ROW -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0">
                <div class="card-header">
                    <h6><i class="bi bi-lightning"></i> Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a href="{{ path('admin_quiz_new') }}" class="btn btn-primary" style="gap: 8px; display: inline-flex; align-items: center;">
                            <i class="bi bi-plus-circle"></i> Create New Quiz
                        </a>
                        <a href="{{ path('admin_quiz_index') }}" class="btn btn-outline-primary" style="gap: 8px; display: inline-flex; align-items: center;">
                            <i class="bi bi-list"></i> View All Quizzes
                        </a>
                        <a href="{{ path('admin_recommandation_index') }}" class="btn btn-outline-primary" style="gap: 8px; display: inline-flex; align-items: center;">
                            <i class="bi bi-lightbulb"></i> Manage Recommendations
                        </a>
                        <a href="#" class="btn btn-outline-secondary" style="gap: 8px; display: inline-flex; align-items: center;">
                            <i class="bi bi-file-earmark-pdf"></i> Export Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- RECENT QUIZZES -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6><i class="bi bi-question-circle"></i> Recent Quizzes</h6>
                        <a href="{{ path('admin_quiz_index') }}" class="text-decoration-none" style="font-size: 0.9rem;">View All →</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Questions</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>GAD-7 Anxiety Quiz</strong></td>
                                <td><span class="badge badge-primary">7</span></td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>PHQ-9 Depression Quiz</strong></td>
                                <td><span class="badge badge-primary">9</span></td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>PSQI Sleep Quality</strong></td>
                                <td><span class="badge badge-primary">8</span></td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Wellness Index</strong></td>
                                <td><span class="badge badge-primary">10</span></td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                    <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- RECOMMENDATIONS OVERVIEW -->
        <div class="col-lg-4">
            <div class="card border-0">
                <div class="card-header">
                    <h6><i class="bi bi-lightbulb"></i> Recommendation Summary</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Critical</span>
                            <strong style="color: #dc3545;">5</strong>
                        </div>
                        <div class="progress" style="height: 6px; border-radius: 3px;">
                            <div class="progress-bar bg-danger" style="width: 33%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">High</span>
                            <strong style="color: #fd7e14;">6</strong>
                        </div>
                        <div class="progress" style="height: 6px; border-radius: 3px;">
                            <div class="progress-bar bg-warning" style="width: 40%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Medium</span>
                            <strong style="color: #0d6efd;">3</strong>
                        </div>
                        <div class="progress" style="height: 6px; border-radius: 3px;">
                            <div class="progress-bar bg-primary" style="width: 20%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Low</span>
                            <strong style="color: #198754;">1</strong>
                        </div>
                        <div class="progress" style="height: 6px; border-radius: 3px;">
                            <div class="progress-bar bg-success" style="width: 7%"></div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top">
                    <a href="{{ path('admin_recommandation_index') }}" class="text-decoration-none">
                        View all recommendations →
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
