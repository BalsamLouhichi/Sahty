    <style>
        :root {
            --sahty-primary: #00acc1; /* turquoise ciel principal */
            --sahty-primary-dark: #00838f; /* pour hover */
            --sahty-primary-light: #4fc3f7; /* bleu ciel plus clair */
            --sahty-bg-hero: linear-gradient(135deg, #4fc3f7 0%, #00acc1 70%, #0097a7 100%);
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .hero {
            background: var(--sahty-bg-hero);
            color: white;
            min-height: 85vh;
            display: flex;
            align-items: center;
            position: relative;
        }
        .hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.12);
            z-index: 1;
        }
        .hero .container { position: relative; z-index: 2; }
        .btn-sahty {
            background-color: var(--sahty-primary);
            border-color: var(--sahty-primary);
            color: white;
            font-weight: 600;
        }
        .btn-sahty:hover {
            background-color: var(--sahty-primary-dark);
            border-color: var(--sahty-primary-dark);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 172, 193, 0.4);
        }
        .btn-outline-sahty {
            border-color: white;
            color: white;
        }
        .btn-outline-sahty:hover {
            background-color: white;
            color: var(--sahty-primary-dark);
        }
        .icon-circle {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            background-color: var(--sahty-primary);
            color: white;
        }
        .card-hover {
            transition: all 0.4s ease;
            border: none;
            border-radius: 16px;
            overflow: hidden;
        }
        .card-hover:hover {
            transform: translateY(-12px);
            box-shadow: 0 25px 50px rgba(0, 172, 193, 0.18) !important;
        }
        .text-sahty { color: var(--sahty-primary) !important; }
        .bg-sahty { background-color: var(--sahty-primary) !important; }
    </style>
</head>
