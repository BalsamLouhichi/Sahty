{% extends 'base.html.twig' %}

{% block title %}Gestion des demandes d'analyse - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Gestion des demandes d'analyse</h4>
                <div>
                    <a href="{{ path('admin_demande_analyse_stats') }}" class="btn btn-info me-2">
                        <i class="fas fa-chart-bar"></i> Statistiques
                    </a>
                    <a href="{{ path('admin_demande_analyse_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouvelle demande
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de filtre -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <select class="form-select" name="statut">
                                <option value="">Tous les statuts</option>
                                <option value="en_attente" {% if selected_statut == 'en_attente' %}selected{% endif %}>En attente</option>
                                <option value="en_cours" {% if selected_statut == 'en_cours' %}selected{% endif %}>En cours</option>
                                <option value="termine" {% if selected_statut == 'termine' %}selected{% endif %}>Terminé</option>
                                <option value="annule" {% if selected_statut == 'annule' %}selected{% endif %}>Annulé</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="laboratoire">
                                <option value="">Tous les laboratoires</option>
                                {% for laboratoire in laboratoires|default([]) %}
                                    <option value="{{ laboratoire.id }}" {% if selected_laboratoire == laboratoire.id %}selected{% endif %}>
                                        {{ laboratoire.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="search" 
                                   placeholder="Rechercher par patient, type..." value="{{ searchQuery|default('') }}">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des demandes -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Patient</th>
                                    <th>Laboratoire</th>
                                    <th>Type de bilan</th>
                                    <th>Date demande</th>
                                    <th>Priorité</th>
                                    <th>Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for demande in demandes %}
                                    <tr>
                                        <td>#{{ demande.id }}</td>
                                        <td>
                                            {% if demande.patient %}
                                                <div class="d-flex align-items-center">
                                                    {% if demande.patient.photoProfil %}
                                                        <img src="{{ asset(demande.patient.photoProfil) }}" 
                                                             alt="{{ demande.patient.prenom }}" 
                                                             class="rounded-circle me-2" width="32" height="32">
                                                    {% else %}
                                                        <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center" 
                                                             style="width: 32px; height: 32px;">
                                                            <span class="text-white small">
                                                                {{ demande.patient.prenom[:1] }}{{ demande.patient.nom[:1] }}
                                                            </span>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        {{ demande.patient.prenom }} {{ demande.patient.nom }}
                                                    </div>
                                                </div>
                                            {% else %}
                                                <span class="text-muted">Patient non spécifié</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if demande.laboratoire %}
                                                {{ demande.laboratoire.nom }}
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ demande.typeBilan }}</td>
                                        <td>{{ demande.dateDemande|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if demande.priorite == 'Haute' %}
                                                <span class="badge bg-danger">Haute</span>
                                            {% elseif demande.priorite == 'Moyenne' %}
                                                <span class="badge bg-warning text-dark">Moyenne</span>
                                            {% else %}
                                                <span class="badge bg-info">Normale</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if demande.statut == 'en_attente' %}
                                                <span class="badge bg-warning text-dark">En attente</span>
                                            {% elseif demande.statut == 'en_cours' %}
                                                <span class="badge bg-primary">En cours</span>
                                            {% elseif demande.statut == 'termine' %}
                                                <span class="badge bg-success">Terminé</span>
                                            {% elseif demande.statut == 'annule' %}
                                                <span class="badge bg-danger">Annulé</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('admin_demande_analyse_view', {'id': demande.id}) }}" 
                                                   class="btn btn-info" title="Voir détails">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                {% if demande.statut != 'termine' and demande.statut != 'annule' %}
                                                    <a href="{{ path('admin_demande_analyse_edit', {'id': demande.id}) }}" 
                                                       class="btn btn-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                {% endif %}
                                                {% if demande.resultatPdf %}
                                                    <a href="{{ asset('uploads/resultats/' ~ demande.resultatPdf) }}" 
                                                       class="btn btn-success" title="Télécharger résultat" target="_blank">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                {% endif %}
                                                <button type="button" class="btn btn-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal{{ demande.id }}"
                                                        title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>

                                            <!-- Modal de confirmation de suppression -->
                                            <div class="modal fade" id="deleteModal{{ demande.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Confirmer la suppression</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body text-start">
                                                            Êtes-vous sûr de vouloir supprimer la demande #{{ demande.id }} 
                                                            pour {{ demande.patient ? demande.patient.prenom ~ ' ' ~ demande.patient.nom : 'patient inconnu' }} ?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                            <form method="post" action="{{ path('admin_demande_analyse_delete', {'id': demande.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-demande-analyse' ~ demande.id) }}">
                                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center py-5">
                                            <i class="fas fa-file-medical fa-3x mb-3 text-muted"></i>
                                            <p class="mb-0">Aucune demande d'analyse trouvée</p>
                                            <div class="mt-3">
                                                <a href="{{ path('admin_demande_analyse_stats') }}" class="btn btn-info me-2">
                                                    <i class="fas fa-chart-bar"></i> Voir les statistiques
                                                </a>
                                                <a href="{{ path('admin_demande_analyse_new') }}" class="btn btn-primary">
                                                    <i class="fas fa-plus"></i> Créer une demande
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}