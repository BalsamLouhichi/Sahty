{% extends 'base.html.twig' %}

{% block title %}Statistiques des laboratoires - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Statistiques des laboratoires</h4>
                <a href="{{ path('admin_laboratoires') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>

    <!-- Cartes de statistiques globales -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total laboratoires</h6>
                            <h2 class="mb-0">{{ stats.total|default(0) }}</h2>
                        </div>
                        <i class="fas fa-flask fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Laboratoires disponibles</h6>
                            <h2 class="mb-0">{{ stats.disponibles|default(0) }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>{{ ((stats.disponibles|default(0) / stats.total|default(1)) * 100)|round }}% du total</span>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Laboratoires indisponibles</h6>
                            <h2 class="mb-0">{{ stats.indisponibles|default(0) }}</h2>
                        </div>
                        <i class="fas fa-times-circle fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>{{ ((stats.indisponibles|default(0) / stats.total|default(1)) * 100)|round }}% du total</span>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total demandes d'analyse</h6>
                            <h2 class="mb-0">{{ stats.total_demandes|default(0) }}</h2>
                        </div>
                        <i class="fas fa-file-medical fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Deuxième ligne de cartes -->
    <div class="row mb-4">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Répartition par responsable</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="p-3">
                                <div class="display-4 text-success">{{ stats.avec_responsable|default(0) }}</div>
                                <p class="text-muted mb-0">Avec responsable</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3">
                                <div class="display-4 text-danger">{{ stats.sans_responsable|default(0) }}</div>
                                <p class="text-muted mb-0">Sans responsable</p>
                            </div>
                        </div>
                    </div>
                    <div class="progress" style="height: 20px;">
                        {% set avecPourcent = ((stats.avec_responsable|default(0) / stats.total|default(1)) * 100)|round %}
                        {% set sansPourcent = ((stats.sans_responsable|default(0) / stats.total|default(1)) * 100)|round %}
                        <div class="progress-bar bg-success" role="progressbar" style="width: {{ avecPourcent }}%" 
                             aria-valuenow="{{ avecPourcent }}" aria-valuemin="0" aria-valuemax="100">
                            {{ avecPourcent }}%
                        </div>
                        <div class="progress-bar bg-danger" role="progressbar" style="width: {{ sansPourcent }}%" 
                             aria-valuenow="{{ sansPourcent }}" aria-valuemin="0" aria-valuemax="100">
                            {{ sansPourcent }}%
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statut des laboratoires</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Top laboratoires -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Top 5 des laboratoires les plus actifs</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Laboratoire</th>
                                    <th>Ville</th>
                                    <th>Nombre de demandes</th>
                                    <th>Responsable</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for labo in stats.top_laboratoires|default([]) %}
                                    <tr>
                                        <td class="fw-bold">{{ labo.nom }}</td>
                                    <td class="fw-bold">{{ labo.nom }}</td>
<td>{{ labo.ville|default('N/A') }}</td>
<td>
    <span class="badge bg-primary">{{ labo.count }}</span>
</td>
<td>
    {% if labo.responsable %}
        {{ labo.responsable.prenom }} {{ labo.responsable.nom }}
    {% else %}
        <span class="text-muted">—</span>
    {% endif %}
</td>
<td>
    <a href="{{ path('admin_laboratoire_view', {'id': labo.id}) }}" 
       class="btn btn-sm btn-info">
        <i class="fas fa-eye"></i>
    </a>
</td>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_laboratoire_view', {'id': labo.id}) }}" 
                                               class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <i class="fas fa-chart-bar fa-2x mb-3 text-muted"></i>
                                            <p class="mb-0">Aucune donnée disponible</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Répartition des demandes par laboratoire -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Répartition des demandes par laboratoire</h5>
                </div>
                <div class="card-body">
                    <canvas id="demandesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Graphique des statuts
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Disponibles', 'Indisponibles'],
            datasets: [{
                data: [{{ stats.disponibles|default(0) }}, {{ stats.indisponibles|default(0) }}],
                backgroundColor: ['#28a745', '#dc3545'],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // Graphique des demandes par laboratoire
    const demandesCtx = document.getElementById('demandesChart').getContext('2d');
    
    // Préparer les données pour le graphique
    const laboNames = [
        {% for item in stats.demandes_par_labo|default([]) %}
            '{{ item.nom }}'{{ not loop.last ? ',' }}
        {% endfor %}
    ];
    
    const demandeCounts = [
        {% for item in stats.demandes_par_labo|default([]) %}
            {{ item.count }}{{ not loop.last ? ',' }}
        {% endfor %}
    ];

    new Chart(demandesCtx, {
        type: 'bar',
        data: {
            labels: laboNames,
            datasets: [{
                label: 'Nombre de demandes',
                data: demandeCounts,
                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
});
</script>
{% endblock %}