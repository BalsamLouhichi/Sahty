{# templates/backoffice/responsable/produit_form.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ mode == 'ajouter' ? 'Ajouter' : 'Modifier' }} un produit - {{ parapharmacie.nom }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: linear-gradient(135deg, #0dcaf0 0%, #0a9ec7 100%);
            color: white;
            padding: 20px 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 0 20px 20px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 20px;
        }

        .sidebar-brand a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: block;
            padding: 12px 20px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s;
        }

        .sidebar-menu a:hover {
            background: rgba(255,255,255,0.1);
            color: white;
        }

        .sidebar-menu a i {
            width: 25px;
            margin-right: 10px;
        }

        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Messages flash */
        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
            margin-bottom: 20px;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #ecf0f1;
            font-weight: 600;
            color: #2c3e50;
            border-radius: 15px 15px 0 0 !important;
        }

        /* Form styles */
        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            padding: 10px 15px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0dcaf0;
            box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
        }

        .form-check-input:checked {
            background-color: #0dcaf0;
            border-color: #0dcaf0;
        }

        .btn {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
        }

        .btn-primary {
            background: linear-gradient(135deg, #0dcaf0 0%, #0a9ec7 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0a9ec7 0%, #0dcaf0 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 202, 240, 0.4);
        }

        /* Image preview */
        .img-preview {
            max-height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .main-content {
                margin-left: 0;
            }
        }

        /* Header */
        .page-header {
            margin-bottom: 30px;
        }

        .page-header h1 {
            color: #343a40;
            font-weight: 600;
        }

        .page-header p {
            color: #6c757d;
        }

        /* Form errors */
        .form-error {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <a href="{{ path('app_responsable_dashboard') }}">
                <i class="fas fa-clinic-medical me-2"></i>sahty - {{ parapharmacie.nom }}
            </a>
        </div>
        
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_responsable_dashboard') }}">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_produits') }}">
                    <i class="fas fa-boxes"></i>Produits
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_commandes') }}">
                    <i class="fas fa-shopping-cart"></i>Commandes
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_statistiques') }}">
                    <i class="fas fa-chart-line"></i>Statistiques
                </a>
            </li>
            <li>
                <a href="{{ path('app_responsable_parametres') }}">
                    <i class="fas fa-cog"></i>Paramètres
                </a>
            </li>
            <li>
                <a href="{{ path('app_home') }}" target="_blank">
                    <i class="fas fa-external-link-alt"></i>Voir le site
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Messages flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Contenu principal -->
        <div class="container-fluid py-4">
            <div class="page-header">
                <h1>
                    <i class="fas fa-{{ mode == 'ajouter' ? 'plus-circle' : 'edit' }} me-2"></i>
                    {{ mode == 'ajouter' ? 'Ajouter' : 'Modifier' }} un produit
                </h1>
                <p class="text-muted">{{ parapharmacie.nom }}</p>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Crème hydratante'}}) }}
                                {{ form_errors(form.nom, {'attr': {'class': 'form-error'}}) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.prix, 'Prix (€)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                                        {{ form_errors(form.prix) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                                        {{ form_errors(form.stock) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                                        {{ form_errors(form.categorie) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.marque, 'Marque', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Nivea'}}) }}
                                        {{ form_errors(form.marque) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Description détaillée du produit...'}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(form.promotion, 'Promotion (%)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.promotion, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                                        {{ form_errors(form.promotion) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(form.poids, 'Poids (g)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.poids, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                                        {{ form_errors(form.poids) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(form.codeBarre, 'Code-barres', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                        {{ form_widget(form.codeBarre, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 123456789'}}) }}
                                        {{ form_errors(form.codeBarre) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 form-check">
                                {{ form_widget(form.estActif, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.estActif, 'Produit actif', {'label_attr': {'class': 'form-check-label fw-semibold'}}) }}
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Image du produit</h5>
                                </div>
                                <div class="card-body text-center">
                                    {% if produit.image %}
                                        <img src="{{ asset('uploads/images/produits/' ~ produit.image) }}" 
                                             alt="{{ produit.nom }}"
                                             class="img-fluid mb-3 rounded img-preview">
                                        <p class="small text-muted mb-3">Image actuelle</p>
                                    {% endif %}
                                    
                                    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.imageFile) }}
                                    
                                    <small class="text-muted d-block mt-2">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Formats : JPEG, PNG, WebP (max 5 Mo)
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <hr>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_responsable_produits') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    {{ mode == 'ajouter' ? 'Ajouter le produit' : 'Enregistrer les modifications' }}
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>