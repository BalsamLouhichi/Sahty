        .btn-view {
            background: var(--primary-light);
            color: var(--primary);
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.2rem;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }

        .btn-view:hover {
            background: var(--primary);
            color: white;
            transform: translateX(2px);
        }

        .btn-appointment {
            background: white;
            color: var(--primary);
            border: 1.5px solid var(--primary-light);
            border-radius: 12px;
            padding: 0.6rem 1.2rem;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }

        .btn-appointment:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .labo-hours {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.8rem;
            color: var(--gray-500);
            margin-top: 0.5rem;
        }

        .labo-hours i {
            color: var(--primary);
            font-size: 0.75rem;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 20px;
            border: 1px solid var(--gray-200);
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: var(--gray-700);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-500);
        }

        .btn-reset {
            background: var(--primary-light);
            color: var(--primary);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 2rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            margin-top: 1rem;
        }

        .active-filter {
            background: var(--primary-light);
            border-radius: 30px;
            padding: 0.5rem 1.25rem;
            color: var(--primary-dark);
            font-size: 0.875rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
        }

        .recommendation-box {
            background: #eef4ff;
            border: 1px solid #dbe8ff;
            border-radius: 18px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
        }

        .recommendation-box h6 {
            margin: 0 0 0.35rem 0;
            font-weight: 700;
            color: var(--primary-dark);
        }

        .recommendation-box p {
            margin: 0;
            color: var(--gray-700);
            font-size: 0.92rem;
        }

        @media (max-width: 768px) {
            .page-wrapper {
                padding: 1rem;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-buttons {
                flex-direction: column;
            }

            .feature-grid,
            .lab-grid {
                grid-template-columns: 1fr;
            }

            .filter-section {
                padding: 1rem;
            }

            .labo-footer {
                flex-direction: column;
                gap: 0.5rem;
            }

            .btn-view, .btn-appointment {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
    {% include 'partials/header.html.twig' %}

    <div class="page-wrapper">
        <div class="container">
            <div class="content-card">
                {# Hero Banner #}
                <div class="hero-section">
                    <h1 class="hero-title">Nos Laboratoires</h1>
                    <p class="hero-text">Des installations de diagnostic de pointe pour des résultats précis et rapides</p>
                    <div class="hero-buttons">
                        <a href="#laboratories" class="btn-hero-primary">
                            <i class="fas fa-flask me-2"></i>
                            Voir les laboratoires
                        </a>
                        {# <a href="#appointment" class="btn-hero-secondary">
                            <i class="fas fa-calendar-check me-2"></i>
                            Prendre rendez-vous
                        </a> #}
                    </div>
                </div>

                {# Features Section #}
                <div class="features-section">
                    <div class="section-title">
                        <h5>Pourquoi Nous Choisir</h5>
                        <h2>Solutions de Diagnostic Avancées</h2>
                    </div>

                    <div class="feature-grid">
                        <div class="feature-box">
                            <div class="feature-icon">
                                <i class="fa fa-flask"></i>
                            </div>
                            <h4>Équipement de Pointe</h4>
                            <p>Nous utilisons les derniers équipements médicaux pour des diagnostics précis et des résultats fiables.</p>
                        </div>
                        <div class="feature-box">
                            <div class="feature-icon">
                                <i class="fa fa-user-md"></i>
                            </div>
                            <h4>Pathologistes Experts</h4>
                            <p>Notre équipe de pathologistes certifiés assure la précision de chaque analyse.</p>
                        </div>
                        <div class="feature-box">
                            <div class="feature-icon">
                                <i class="fa fa-bolt"></i>
                            </div>
                            <h4>Résultats Rapides</h4>
                            <p>Obtenez vos résultats rapidement via notre portail en ligne ou application mobile.</p>
                        </div>
                    </div>
                </div>

                {# Laboratories Section #}
                <div class="labs-section" id="laboratories">
                    <div class="section-title">
                        <h5>Nos Laboratoires</h5>
                        <h2>Trouvez un Laboratoire Près de Chez Vous</h2>
                        <p>Nous avons plusieurs laboratoires à travers la ville pour votre commodité.</p>
                    </div>

                    {% if patient_ville %}
                        <div class="recommendation-box">
                            <h6>
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Recommandations personnalisees
                            </h6>
                            <p>
                                Ville du patient detectee: <strong>{{ patient_ville }}</strong>.
                                Les laboratoires de la meme ville sont affiches en priorite.
                            </p>
                        </div>
                    {% endif %}

                    {% if recommended_laboratoires is defined and recommended_laboratoires|length > 0 %}
                        <div class="mb-4">
                            <h5 class="mb-3">Laboratoires recommandes</h5>
                            <div class="lab-grid">
                                {% for laboratoire in recommended_laboratoires %}
                                    <div class="labo-card">
                                        <img src="https://images.unsplash.com/photo-1581595220892-b0739db3ba8c?w=400&h=200&fit=crop&auto=format" alt="Laboratoire mÃ©dical" class="labo-img">
                                        <div class="labo-icon">
                                            <i class="fa fa-flask"></i>
                                        </div>
                                        <div class="labo-content">
                                            <h3>{{ laboratoire.nom }}</h3>
                                            <div class="labo-location">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <span>{{ laboratoire.ville }}{% if laboratoire.adresse is defined %}, {{ laboratoire.adresse }}{% endif %}</span>
                                            </div>
                                            <div class="labo-footer">
                                                <a href="{{ path('app_labo_show', {'id': laboratoire.id}) }}" class="btn-view">
                                                    <i class="fas fa-eye"></i>
                                                    Voir dÃ©tails
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Filter Section #}
                    <div class="filter-section">
                        <form method="get" id="filterForm">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="filter-label" for="filter_name">
                                        <i class="fas fa-search"></i>
                                        Nom du laboratoire
                                    </label>
                                    <input class="form-control" id="filter_name" name="name" type="text" value="{{ filter_name|default('') }}" placeholder="Rechercher par nom">
                                </div>
                                <div class="col-md-3">
                                    <label class="filter-label" for="filter_ville">
                                        <i class="fas fa-map-marker-alt"></i>
                                        Ville
                                    </label>
                                    <select class="form-select" id="filter_ville" name="ville">
                                        <option value="">Toutes les villes</option>
                                        {% for city in filter_villes|default([]) %}
                                            <option value="{{ city }}" {{ filter_ville == city ? 'selected' : '' }}>{{ city }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="filter-label" for="filter_type_bilan">
                                        <i class="fas fa-vial"></i>
                                        Type d'analyse
                                    </label>
                                    <select class="form-select" id="filter_type_bilan" name="type_bilan">
                                        <option value="">Toutes les analyses</option>
                                        {% for type in filter_type_bilans|default([]) %}
                                            <option value="{{ type }}" {{ filter_type_bilan == type ? 'selected' : '' }}>{{ type }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn-filter" type="submit">
                                        <i class="fas fa-filter me-2"></i>
                                        Filtrer
                                    </button>
                                </div>
                            </div>
                        </form>

                        {# Active filters display #}
                        {% if filter_name or filter_ville or filter_type_bilan %}
                            <div class="mt-3 d-flex gap-2 align-items-center flex-wrap">
                                <span class="active-filter">
                                    <i class="fas fa-filter me-1"></i>
                                    Filtres actifs:
                                </span>
                                {% if filter_name %}
                                    <span class="badge bg-light text-dark p-2">
                                        <i class="fas fa-search me-1"></i>
                                        "{{ filter_name }}"
                                    </span>
                                {% endif %}
                                {% if filter_ville %}
                                    <span class="badge bg-light text-dark p-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        {{ filter_ville }}
                                    </span>
                                {% endif %}
                                {% if filter_type_bilan %}
                                    <span class="badge bg-light text-dark p-2">
                                        <i class="fas fa-vial me-1"></i>
                                        {{ filter_type_bilan }}
                                    </span>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>

                    {# Laboratory Cards #}
                    <div id="lab-cards">
                        {% if laboratoires|length > 0 %}
                            <div class="lab-grid">
                                {% for laboratoire in laboratoires %}
                                    <div class="labo-card">
                                        <img src="https://images.unsplash.com/photo-1581595220892-b0739db3ba8c?w=400&h=200&fit=crop&auto=format" alt="Laboratoire médical" class="labo-img">
                                        <div class="labo-icon">
                                            <i class="fa fa-flask"></i>
                                        </div>
                                        <div class="labo-content">
                                            <h3>{{ laboratoire.nom }}</h3>
                                            <div class="labo-location">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <span>{{ laboratoire.ville }}{% if laboratoire.adresse is defined %}, {{ laboratoire.adresse }}{% endif %}</span>
                                            </div>
                                            
                                            <div class="labo-services">
                                                <h6>
                                                    <i class="fas fa-vial"></i>
                                                    Analyses disponibles
                                                </h6>
                                                <ul>
                                                    <li><i class="fas fa-check-circle"></i> Analyses sanguines</li>
                                                    <li><i class="fas fa-check-circle"></i> Imagerie médicale</li>
                                                    <li><i class="fas fa-check-circle"></i> Pathologie</li>
                                                </ul>
                                            </div>

                                            <div class="labo-hours">
                                                <i class="fas fa-clock"></i>
                                                <span>Lun-Ven: 8h00 - 18h00 | Sam: 9h00 - 14h00</span>
                                            </div>

                                            <div class="labo-footer">
                                                <a href="{{ path('app_labo_show', {'id': laboratoire.id}) }}" class="btn-view">
                                                    <i class="fas fa-eye"></i>
                                                    Voir détails
                                                </a>
                                                <a href="{{ path('app_labo_show', {'id': laboratoire.id}) }}" class="btn-appointment">
                                                    <i class="fas fa-calendar-check"></i>
                                                    Rendez-vous
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="fas fa-flask"></i>
                                <h4>Aucun laboratoire trouvé</h4>
                                <p>Essayez de modifier vos filtres de recherche</p>
                                <a href="{{ path('app_labo_index') }}" class="btn-reset">
                                    <i class="fas fa-redo-alt me-2"></i>
                                    Réinitialiser les filtres
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'partials/footer.html.twig' %}

    {# Back to Top Button #}
    <a href="#!" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

